use strict;
use warnings;
$SIG{__WARN__} = sub { die @_ };

use File::Basename;

die "ar not found" unless $ENV{ar};

my @arflags;
push @arflags, split(/ /, $ENV{arflags}) if $ENV{arflags};

my @cmd = (
    $ENV{ar}
  , @arflags
  , "rcs"
  , $ENV{bm_target}
  # object files in this module
  , grep { substr($_, -2) eq ".o" } split(/ /, $ENV{objects})
);

# exec into the compiler
exec { $cmd[0] } @cmd

__DATA__

envs : {
  ar : {
    path-search : ar
  }

  # object files for the library
  objects : [
    select : [
      target
      traverse : {
        direction : down
        relation : strong
        max-distance : 1
        min-distance : 0
      }
    ]
    property : relpath
  ]

  includes : [
    select : [
      module
      union : [
        # imported directories
        traverse : {
          direction : down
          relation : imports
        }
      ]
    ]

    property : relpath
  ]
}
