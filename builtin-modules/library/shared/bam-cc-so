use strict;
use warnings;

use File::Basename;

die "cc not found in environment" unless $ENV{cc};

my $name = basename($ENV{bm_target});
my $dot = index($name, ".");
my $soname = substr($name, 0, $dot) . ".so";
my $lnk = $ENV{bm_target} . ".lnk";

# devel soname
if($ENV{bm_variant} eq "devel.pic.xapi")
{
  $soname = $name;
}

my @cmd = (
    $ENV{cc}
  , split(/ /, $ENV{cflags})
  , "-shared"
  # linker script
  , "-Wl,--version-script=$lnk"
  # soname
  , "-Wl,-soname,$soname"
  , (map { "-I$_" } split(/ /, $ENV{includes}))
  , "-o", $ENV{bm_target}
  # object files in this module
  , grep { substr($_, -2) eq ".o" } split(/ /, $ENV{objects})
);

use Data::Dumper;
print Dumper \@cmd;
print(join(" ", @cmd) . "\n");

# exec into the compiler
exec { $cmd[0] } @cmd

__DATA__

envs : {
  # object files for the library
  objects : [
    select : [
      target
      traverse : {
        direction : down
        relation : strong
        max-distance : 1
        min-distance : 1
      }
    ]
    property : relpath
  ]

  includes : [
    select : [
      module
      union : [
        # imported directories
        traverse : {
          direction : down
          relation : imports
        }
      ]
    ]

    property : relpath
  ]
}
