path : $cc
args : [
  $cflags
  sequence : [
    select : [
      module
      # all directories in the module
      traverse : {
        direction : down
        min-distance : 0
        relation : fs
        file-type : dir
      }
    ]
    property : relpath
    prepend : "-I"
  ]

  sequence : [
    select : [
      module
      # imported directories
      traverse : {
        direction : down
        relation : imports
      }
    ]
    property : relpath
    prepend : "-I"
  ]
  $bm_source
  "-c"
  "-o" $bm_target
]
