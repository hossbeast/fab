bisonflags   : "--warnings=error"
cflags       : {
  -g -m64 -Wall -Werror -D_GNU_SOURCE -fno-builtin-log -Wmissing-prototypes "-fdiagnostics-color=always" -Wno-misleading-indentation -Wno-trigraphs
  "-DFABIPCDIR=/var/run/fab"
}
cflags.eapi  : {
  -DEAPI -DXAPI_MODE_ERRORCODE
}
cflags.xapi  : {
  -DXAPI -DXAPI_MODE_STACKTRACE
}
cflags.debug : {
  -O0 -ggdb3 -DDEBUG
}
cflags.devel : {
  -O0 -ggdb3 -DDEVEL -Wno-frame-address -DFAULT_INJECTION "-fsanitize=address,undefined"
}
cflags.trace : {
  -O3 -ggdb3 -DDEVEL -DTRACE -Wno-frame-address -fno-omit-frame-pointer -Wno-array-bounds
}
cflags.final : {
  -O3 -Wno-array-bounds # -Warray-bounds is NOT COMPATIBLE with containerof
}
cflags.pic : {
  -fPIC
}
lflags.devel : [
  -lasan -lubsan
]
