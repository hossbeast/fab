once {
  +[ $*/../vars.fab ]

  $cflags = [ $dlibxapi $dlibxlinux ~ s/^/-I ]

  $cflags_xapi_devel = [ $cflags_xapi_devel $cflags ]
  $cflags_xapi_xunit = [ $cflags_xapi_xunit $cflags ]

  # errtab files
  +[@std.xapi.errtab]($dext = [ xapi.devel.pic.o ]; $rdirs = $*; $apidata = [1]; $cc; $cflags = [ $cflags_xapi_devel -fPIC ])

  # c files
  +[@std.c]($dirs = $*; $cc; $dext = [ xapi.devel.pic.o ]; $cflags = [ $cflags_xapi_devel -fPIC ])
  +[@std.c]($dirs = $*; $cc; $dext = [ xapi.xunit.pic.o ]; $cflags = [ $cflags_xapi_xunit -fPIC ])
}
