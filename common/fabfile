once {
	+[ $*/../vars.fab ]

	$copts = [
		# include paths - mark as system to preclude dependency discovery from gcc
		[ $dlibxapi $dlibxlinux $dliblistwise $dlibpstring ~ s/^/-I ]
	]

	# c files
	+[@std.c]($rdirs = $dcommon; $cc; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $dext = [ final.o ]; $cflags = [ $cflags_final $copts ])
	+[@std.c]($rdirs = $dcommon; $cc; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $dext = [ debug.o ]; $cflags = [ $cflags_debug $copts ])
	+[@std.c]($rdirs = $dcommon; $cc; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $dext = [ devel.o ]; $cflags = [ $cflags_devel $copts ])

	+[@std.c]($rdirs = $dcommon; $cc; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $dext = [ final.pic.o ]; $cflags = [ $cflags_final $copts -fPIC ])
	+[@std.c]($rdirs = $dcommon; $cc; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $dext = [ debug.pic.o ]; $cflags = [ $cflags_debug $copts -fPIC ])
	+[@std.c]($rdirs = $dcommon; $cc; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $dext = [ devel.pic.o ]; $cflags = [ $cflags_devel $copts -fPIC ])

	# test sos
	+[$dxunit/../fablib/xunit/tests.fab](
		$rdirs = $dcommon;
		$cc;
		$dext = [ devel.pic.o ];
		$dscext = [ devel.pic.o ];
		$soext = [ devel.xu.so ];
		$cflags = [ $cflags_devel [ [ $dlibxunit $dlibxapi ] ~ s/^/-I ] -fPIC ];
		-$tsopaths
	)

	# run all tests
	[ @test ] : [ $xunit_devel $tsopaths ]
	{
		[ $xunit_devel ] [ $tsopaths ~ fi ] 1>&501 2>&502
	}

	[ @test.more ] : [ $xunit_devel $tsopaths ]
	{
		[ $xunit_devel ] +XUNIT [ $tsopaths ~ fi ] 1>&501 2>&502
	}
}
