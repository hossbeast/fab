# variable defs, $cc, $cflags, etc
$dcommon = [ $* ]
+[ $dcommon/vars.fab ]

$cflags = [ $cflags [ -I $dcommon ~ j ] ]

# c files
+[@std.c]($gendir = $dcommon; $dirs = $dcommon; -$cfabpaths; $cc $cflags)
+[@std.c]($gendir = $dcommon; $dirs = $dcommon; $ext = [ pic.o ]; $cflags = [ $cflags -fPIC ]; $cc)

#
# compile all o files
#

[ @all ] : [ $cfabpaths ~ xs/<o> ]

#
# tasks
#

[ @clean ]
{
	rm -f [ $dcommon/*.o ] 2>/dev/null
}
