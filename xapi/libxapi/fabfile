# source directories
$dlibxapi 		= [ $* ]
$dcommon			= [ $*/../../common ~ j ]

# variable defs, $cc, $cflags, etc
# common targets xmem, map, etc
+[ $dcommon/vars.fab ]
+[ $dcommon ] @common

##
## variables
##
$libname 			= [ lixapi.so ]
$soname				= [ $libname ~ j ]
$libxapi  		= [ $dlibxapi/libxapi.so ~ j ]		# path to the library .so
$cflags				= [ $cflags -fPIC [ $dlibxapi ~ lsr/xm/<h>/dn/ss/u/s/^/-I ] $incdirs ]
$lflags				= [ -shared, [ "-Wl,-soname," $soname ] ]

# source files
+[@std.c]($gendir = $dlibxapi; $rdirs = $dlibxapi; $ext = [ pic.o ]; -$cfabpaths; $cc $cflags)

##
## dependencies
##

# default NOFILE target - build library and all operators
[ @all ] : [ $libxapi ]

##
## formulas
##

# link the library
[ $libxapi ] : [ $cfabpaths ~ xs/<c>/<pic.o> ]
{
	  exec 99>&1 1>[ $dlibxapi/exports ]
	  echo "{ global: "
	> sed 's/.*API\(DATA\)\?[[:space:]]\+\([a-zA-Z][0-9a-zA-Z_]*\).*/\2;/p; d' <(\
	  cat -- [ $@ ~ rx/aneedw/xm/<c>/ss/u/fi ] )
	> echo "local: *; };"
		exec 1>&99

	[ $cc ] [ $cflags ~ ss/u/fi ] -o [ $@ ] [ $@ ~ rx/aneedw/xm/<o>/ss/u/fi ] [ $lflags ] [ "-Wl,--version-script=" $dlibxapi/exports]
}

##
## tasks
##

[ @install ] : [ @all ]
{
	install -d																[ $destdir/$libdir ]
	install [ $libxapi ]											[ $destdir/$libdir/$libname ]

	install -d																[ $destdir/$incdir/xapi ]
	install [ $dlibxapi/xapi/callstack.h ]		[ $destdir/$incdir/xapi ]
}

[ @uninstall ]
{
	rm -f																							[ $destdir/$libdir/$libname ]
	rm -f																							[ $destdir/$incdir/listwise.h ]
}

[ @clean ] :* [ @common.clean ]
{
	find [ $dlibxapi ] -name '*.o' -delete
	find [ $dlibxapi ] -name '*.so' -delete
	find [ $dlibxapi ] -name '*.lex.*' -delete
	find [ $dlibxapi ] -name '*.tab.*' -delete
	find [ $dlibxapi ] -name exports -delete
}
