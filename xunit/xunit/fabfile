# definitions
$dcommon				= [ $*/../../common ~ j ]
+[ $dcommon/vars.fab ]

# source invocations
+[ $dcommon ]() @common

# variables
$cflags					= [ $cflags -fno-builtin-log [ $dxunit ~ lsr c -d s/^/-I ]
	[ -DFABVERSIONS="\""$VERSIONS"\"" ~ j ]
	[ -DFABVERSIONN="\""$VERSIONN"\"" ~ j ]
	[ ~ ?{ cons{-DBUILDSTAMP="`date`"} ]

	# include paths - mark as system to preclude dependency discovery from gcc
	[ $dlibxapi $dlibxlinux $dlibxunit ~ s/^/-isystem ]
]
$lflags					= [ $lflags $libxunit $libxapi $libxlinux ]
$name						= [ xunit ]
$xunit					= [ $dxunit/$name ~ j ]

# c files
+[@std.c]($gendir = $dxunit; $rdirs = $dxunit; $cc $cflags)

# errtab
+[@std.xapi.errtab]($gendir = $dxunit; $rdirs = $dxunit; $cc $cflags)

# catchall node
[ @all ] : [ $xunit ]

#
# formulas
#
[ $xunit ] : [ $dxunit/main.o ~ j ]
{
	[ $cc ] [ $cflags ~ ss u fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags ~ fi ]
}

#
# tasks
#

[ @install ] : [ $xunit ]
{
	install -d									[ $destdir/$bindir ]
	install [ $xunit ]					[ $destdir/$bindir/$name ]
}
