# definitions
+[ $*/../../vars.fab ]

# variables
$cflags					= [ $cflags -fno-builtin-log [ $dxunit ~ lsr c -d s/^/-I ]
	[ -DFABVERSIONS="\""$VERSIONS"\"" ~ j ]
	[ -DFABVERSIONN="\""$VERSIONN"\"" ~ j ]
	[ ~ ?{ cons{-DBUILDSTAMP="`date`"} ]

	# include paths - mark as system to preclude dependency discovery from gcc
	[ $dlibxapi $dlibxlinux $dlibxunit ~ s/^/-isystem ]
]
$lflags					= [ $lflags $libxapi $libxlinux $libxunit -ldl ]

# c files
+[@std.c]($gendir = $dxunit; $rdirs = $dxunit; $ext = [ ]; $cc; $cflags = $cflags.final)
+[@std.c]($gendir = $dxunit; $rdirs = $dxunit; $ext = [ ]; $cc; $cflags = $cflags.debug)
+[@std.c]($gendir = $dxunit; $rdirs = $dxunit; $ext = [ ]; $cc; $cflags = $cflags.devel)

# errtab
+[@std.xapi.errtab]($gendir = $dxunit; $rdirs = $dxunit; $cc $cflags)

# catchall node
[ @all ] : [ $xunit ]

#
# formulas
#
[ $xunit ] : [ $dxunit/main.o ~ j ]
{
	[ $cc ] [ $cflags -rdynamic ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags ~ fi ]
}

#
# tasks
#

[ @install.debug ] : [ $xunit.debug ]
{
	install -d									[ $destdir/$bindir ]
	install [ $xunit.final ]		[ $destdir/$bindir/xunit ]
}

[ @install.final ] : [ $xunit.final ]
{
	install -d									[ $destdir/$bindir ]
	install [ $xunit.debug ]		[ $destdir/$bindir/xunit ]
}
