# definitions
+[ $*/../../vars.fab ]

+[ $dcommon]() @common

# variables
$copts = [ -export-dynamic -fno-builtin-log [ $dxunit ~ lsr c -d s/^/-I ]
	[ -DFABVERSIONS="\""$VERSIONS"\"" ~ j ]
	[ -DFABVERSIONN="\""$VERSIONN"\"" ~ j ]
	[ ~ ?{ cons{-DBUILDSTAMP="`date`"} ]

	# include paths - mark as system to preclude dependency discovery from gcc
	[ $dlibxapi $dlibxlinux $dlibxunit ~ s/^/-I ]
]
$lopts = [ -ldl ]
$rpath = [ 
	[ $dlibxapi $dlibxlinux $dlibxunit $dlibpstring $dliblistwise ~ [ ?{ [ rb{$*} ~ j ] "s{^}{'-Wl,-rpath,$ORIGIN/}" "s{$}{'}" ~ fi ] ]
]
$lflags_final = [ $lflags_final $lopts $libxapi_final $libxlinux_final $libxunit_final ]
$lflags_debug = [ $lflags_debug $lopts $libxapi_debug $libxlinux_debug $libxunit_debug ]
$lflags_devel = [ $lflags_devel $lopts $libxapi_devel $libxlinux_devel $libxunit_devel $liblistwise_devel $libpstring_devel $rpath ]

# c files
+[@std.c]($dext = [ final.o ]; $gendir = $dxunit; $rdirs = $dxunit; $cc; $cflags = [ $cflags_final $copts ])
+[@std.c]($dext = [ debug.o ]; $gendir = $dxunit; $rdirs = $dxunit; $cc; $cflags = [ $cflags_debug $copts ])
+[@std.c]($dext = [ devel.o ]; $gendir = $dxunit; $rdirs = $dxunit; $cc; $cflags = [ $cflags_devel $copts ])

# errtab
+[@std.xapi.errtab]($dext = [ final.o ]; $gendir = $dxunit; $rdirs = $dxunit; $cc; $cflags = [ $cflags_final $copts ])
+[@std.xapi.errtab]($dext = [ debug.o ]; $gendir = $dxunit; $rdirs = $dxunit; $cc; $cflags = [ $cflags_debug $copts ])
+[@std.xapi.errtab]($dext = [ devel.o ]; $gendir = $dxunit; $rdirs = $dxunit; $cc; $cflags = [ $cflags_devel $copts ])

# catchall node
[ @final ] : [ $xunit_final ]
[ @debug ] : [ $xunit_debug ]
[ @devel ] : [ $xunit_devel ]

#
# formulas
#
[ $xunit_final ] : [ $dxunit/main.final.o ~ j ]
{
	[ $cc ] [ $cflags_final $copts ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_final $lopts ~ fi ]
}

[ $xunit_debug ] : [ $dxunit/main.debug.o ~ j ]
{
	[ $cc ] [ $cflags_debug $copts ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_debug $lopts ~ fi ]
}

[ $xunit_devel ] : [ $dxunit/main.devel.o ~ j ]
{
	[ $cc ] [ $cflags_devel $copts ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_devel $lopts ~ fi ]
}

[ $xunit_final ] :^ [ $libxapi_final $libxlinux_final $libxunit_final ]
[ $xunit_debug ] :^ [ $libxapi_debug $libxlinux_debug $libxunit_debug ]
[ $xunit_devel ] :^ [ $libxapi_devel $libxlinux_devel $libxunit_devel ]

#
# tasks
#

[ @install.debug ] : [ $xunit.debug ]
{
	install -d									[ $destdir/$bindir ]
	install [ $xunit.final ]		[ $destdir/$bindir/xunit ]
}

[ @install.final ] : [ $xunit.final ]
{
	install -d									[ $destdir/$bindir ]
	install [ $xunit.debug ]		[ $destdir/$bindir/xunit ]
}
