# source directories
$dcommon			= [ $*/../../common ~ j ]
+[ $dcommon/vars.fab ]

# source invocations
+[ $dcommon ]() @common

$libxapi = [ $dcommon/../libxapi/libxapi.so ~ j ]

# variables
$libname 			= [ libxunit.so ]
$soname				= [ $libname ~ j ]
$libxunit			= [ $dlibxunit/libxunit.so ~ j ]		# path to the library .so
$cflags				= [ $cflags -fPIC [ $dlibxunit ~ lsr c -d s/^/-I ]
	# include paths - mark as system to preclude dependency discovery from gcc
	[ $dlibxapi ~ s/^/-isystem ]
]
$lflags				= [ $libxapi -shared [ -Wl,-soname,$soname ~ j ] ]

# source files
+[@std.c]($gendir = $dlibxunit; $rdirs = $dlibxunit; $ext = [ pic.o ]; -$cobjpaths; $cc $cflags)
+[@std.xapi.errtab] ($gendir = $dlibxunit; $rdirs = $dlibxunit; $ext = [ pic.o ]; $apidata = [1]; $cc $cflags)

##
## dependencies
##

# default NOFILE target - build library and all operators
[ @all ] : [ $libxunit ]

##
## formulas
##

# link the library
[ $libxunit ] : [ $cobjpaths ]
{
	  (echo "{ global: "
	> sed 's/.*API\(DATA\)\?[[:space:]]\+\([a-zA-Z][0-9a-zA-Z_]*\).*/\2;/p; d' <(\
	  cat -- [ $@ ~ rx/aneedw lx/c ss u fi ] )
	> echo "local: *; };"
	  ) 1>[ $dlibxunit/exports ]

	[ $cc ] [ $cflags ~ ss u fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags ~ fi ] [ -Wl,--version-script=$dlibxunit/exports ]
}

##
## tasks
##

[ @install ] : [ @all ]
{
	install -d															[ $destdir/$libdir ]
	install [ $libxunit ]										[ $destdir/$libdir/$libname ]
}

[ @installdevheaders ]
{
	install -d															[ $destdir/$incdir ]
	install [ $dlibxunit/xunit.h	]					[ $destdir/$incdir/xunit.h ]
}
