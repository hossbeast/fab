# definitions
+[ $*/../../vars.fab ]

# source invocations
+[ $dcommon ]() @common

# variables
$basename			= [ xunit ]
$libname_xapi = [ lib $basename .so ~ j ]
$copts				= [ -fPIC [ $dlibxunit ~ lsr c -d s/^/-I ]
	# include paths
	[ $dlibxapi ~ s/^/-I ]
]
$cflags_xapi_final	= [ $cflags_xapi_final $copts ]
$cflags_xapi_debug	= [ $cflags_xapi_debug $copts ]
$cflags_xapi_devel	= [ $cflags_xapi_devel $copts ]

$lopts							= [ -shared [ -Wl,--version-script=$*/exports ~ j ] ]
$lflags_xapi_final	= [ $libxapi_xapi_final $lopts [ -Wl,-soname,libxunit-xapi.so ~ j ] ]
$lflags_xapi_debug	= [ $libxapi_xapi_debug $lopts [ -Wl,-soname,libxunit-xapi.so ~ j ] ]
$lflags_xapi_devel	= [ $libxapi_xapi_devel $lopts [ -Wl,-soname,libxunit-xapi-devel.so ~ j ] ]

# source files
+[@std.c]($dext = [ xapi.final.pic.o ]; $rdirs = $dlibxunit; $cc; $cflags = $cflags_xapi_final)
+[@std.c]($dext = [ xapi.debug.pic.o ]; $rdirs = $dlibxunit; $cc; $cflags = $cflags_xapi_debug)
+[@std.c]($dext = [ xapi.devel.pic.o ]; $rdirs = $dlibxunit; $cc; $cflags = $cflags_xapi_devel)
+[@std.xapi.errtab]($dext = [ xapi.final.pic.o ]; $rdirs = $dlibxunit; $apidata = [1]; $cc; $cflags = $cflags_xapi_final)
+[@std.xapi.errtab]($dext = [ xapi.debug.pic.o ]; $rdirs = $dlibxunit; $apidata = [1]; $cc; $cflags = $cflags_xapi_debug)
+[@std.xapi.errtab]($dext = [ xapi.devel.pic.o ]; $rdirs = $dlibxunit; $apidata = [1]; $cc; $cflags = $cflags_xapi_devel)

##
## dependencies
##

# default NOFILE target - build library and all operators
[ @all ] : [ @all.xapi ]
[ @all.xapi ] : [ @final.xapi @debug.xapi @devel.xapi ]
[ @final ] : [ @final.xapi ]
[ @final.xapi ] : [ $libxunit_xapi_final ]
[ @debug ] : [ @debug.xapi ]
[ @debug.xapi ] : [ $libxunit_xapi_debug ]
[ @devel ] : [ @devel.xapi ]
[ @devel.xapi ] : [ $libxunit_xapi_devel ]

##
## formulas
##

# library exports
[ $*/exports ~ j ] : [ $* ~ lsr lx/c ]
{
	  (echo "{ global: "
	> perl -ne 'if(/API(?:DATA)?.*? ([a-zA-Z_][a-zA-Z0-9_]+) *(?:\(|=|;)/) { print "$1;\n" }' <(\
	  cat -- [ $@ ~ rx/ineed fi ] )
	> echo "local: *; };"
	  ) 1>[ $@ ]
}

# link the library
[ $libxunit_xapi_final ] : [ [ $*/exports ~ j ] [ $* ~ lsr sxf/c/xapi.final.pic.o y ] ]
{
	[ $cc ] [ $cflags_xapi_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_xapi_final ~ fi ] 
}

[ $libxunit_xapi_debug ] : [ [ $*/exports ~ j ] [ $* ~ lsr sxf/c/xapi.debug.pic.o y ] ]
{
	[ $cc ] [ $cflags_xapi_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_xapi_debug ~ fi ] 
}

[ $libxunit_xapi_devel ] : [ [ $*/exports ~ j ] [ $* ~ lsr sxf/c/xapi.devel.pic.o y ] ]
{
	[ $cc ] [ $cflags_xapi_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_xapi_devel ~ fi ] 
}

[ $libxunit_xapi_final ] :^ [ $libxapi_xapi_final ]
[ $libxunit_xapi_debug ] :^ [ $libxapi_xapi_debug ]
[ $libxunit_xapi_devel ] :^ [ $libxapi_xapi_devel ]

##
## tasks
##

[ @install.final.xapi ] : [ @final.xapi ]
{
	install -d															[ $destdir/$libdir ]
	install [ $libxunit ]										[ $destdir/$libdir/$libname_xapi ]
}

[ @installdevheaders ]
{
	install -d															[ $destdir/$incdir ]
	install [ $dlibxunit/xunit.h	]					[ $destdir/$incdir/xunit.h ]
}
