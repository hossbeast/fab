# definitions
+[ $*/../../vars.fab ]

# source invocations
+[ $dcommon ]() @common

# variables
$libname 			= [ libxunit.so ]
$copts				= [ -fPIC [ $dlibxunit ~ lsr c -d s/^/-I ]
	# include paths - mark as system to preclude dependency discovery from gcc
	[ $dlibxapi ~ s/^/-I ]
]
$cflags_final	= [ $cflags_final $copts ]
$cflags_debug	= [ $cflags_debug $copts ]
$cflags_devel	= [ $cflags_devel $copts ]

$lopts				= [ -shared [ -Wl,--version-script=$*/exports ~ j ] ]
$lflags_final	= [ $libxapi_final $lopts [ -Wl,-soname,libxunit.so ~ j ] ]
$lflags_debug	= [ $libxapi_debug $lopts [ -Wl,-soname,libxunit.debug.so ~ j ] ]
$lflags_devel	= [ $libxapi_devel $lopts [ -Wl,-soname,libxunit.devel.so ~ j ] ]

# source files
+[@std.c]($dext = [ final.pic.o ]; $gendir = $dlibxunit; $rdirs = $dlibxunit; $cc; $cflags = $cflags_final)
+[@std.c]($dext = [ debug.pic.o ]; $gendir = $dlibxunit; $rdirs = $dlibxunit; $cc; $cflags = $cflags_debug)
+[@std.c]($dext = [ devel.pic.o ]; $gendir = $dlibxunit; $rdirs = $dlibxunit; $cc; $cflags = $cflags_devel)
+[@std.xapi.errtab]($dext = [ final.pic.o ]; $gendir = $dlibxunit; $rdirs = $dlibxunit; $apidata = [1]; $cc; $cflags = $cflags_final)
+[@std.xapi.errtab]($dext = [ debug.pic.o ]; $gendir = $dlibxunit; $rdirs = $dlibxunit; $apidata = [1]; $cc; $cflags = $cflags_debug)
+[@std.xapi.errtab]($dext = [ devel.pic.o ]; $gendir = $dlibxunit; $rdirs = $dlibxunit; $apidata = [1]; $cc; $cflags = $cflags_devel)

##
## dependencies
##

# default NOFILE target - build library and all operators
[ @final ] : [ $libxunit_final ]
[ @debug ] : [ $libxunit_debug ]
[ @devel ] : [ $libxunit_devel ]

##
## formulas
##

# library exports
[ $*/exports ~ j ] : [ $* ~ lsr lx/c ]
{
	  (echo "{ global: "
	> sed 's/.*API\(DATA\)\?[[:space:]]\+\([a-zA-Z][0-9a-zA-Z_]*\).*/\2;/p; d' <(\
	  cat -- [ $@ ~ rx/ineed fi ] )
	> echo "local: *; };"
	  ) 1>[ $@ ]
}

# link the library
[ $libxunit_final ] : [ [ $*/exports ~ j ] [ $*/error/error.final.pic.o ~ j ] ]
{
	[ $cc ] [ $cflags_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_final ~ fi ] 
}

[ $libxunit_debug ] : [ [ $*/exports ~ j ] [ $*/error/error.debug.pic.o ~ j ] ]
{
	[ $cc ] [ $cflags_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_debug ~ fi ] 
}

[ $libxunit_devel ] : [ [ $*/exports ~ j ] [ $*/error/error.devel.pic.o ~ j ] ]
{
	[ $cc ] [ $cflags_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_devel ~ fi ] 
}

[ $libxunit_final ] :^ [ $libxapi_final ]
[ $libxunit_debug ] :^ [ $libxapi_debug ]
[ $libxunit_devel ] :^ [ $libxapi_devel ]

##
## tasks
##

[ @install ] : [ @all ]
{
	install -d															[ $destdir/$libdir ]
	install [ $libxunit ]										[ $destdir/$libdir/$libname ]
}

[ @installdevheaders ]
{
	install -d															[ $destdir/$incdir ]
	install [ $dlibxunit/xunit.h	]					[ $destdir/$incdir/xunit.h ]
}
