use strict;
use warnings;
$SIG{__WARN__} = sub { die @_ };

die "cc not found in environment" unless $ENV{cc};

# exec into the compiler
my @cmd = (
    $ENV{cc}
  , split(/ /, $ENV{cflags})
  , "-o", $ENV{bm_target}
  # object files
  , split(/ /, $ENV{objects})
  # library files
  , split(/ /, $ENV{libraries})
);

exec { $cmd[0] } @cmd

__DATA__

envs : {
  cc : {
    path-search : cc
  }

  objects : [
    select : [
      target
      traverse : {
        direction : down
        graph : depends
        max-distance : 1
        min-distance : 1
        extension : o
      }
    ]
    property : relpath
  ]

  libraries : [
    select : [
      target
      traverse : {
        direction : down
        graph : depends
        max-distance : 1
        min-distance : 1
        extension : a
      }
    ]
    property : relpath
  ]
}
