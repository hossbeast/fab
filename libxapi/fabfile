# definitions
+[ $*/../vars.fab ]

# source invocations
+[ $dcommon ]() @common

# variables
$libname 			= [ libxapi.so ]
$copts				= [ -fPIC [ $dlibxapi ~ lsr c -d s/^/-I ]
	# include paths - mark as system to preclude dependency discovery from gcc
	[ $dlibxlinux $dliblistwise $dlibpstring ~ s/^/-I ]
]
$cflags_final = [ $cflags_final $copts ]
$cflags_debug = [ $cflags_debug $copts ]
$cflags_devel = [ $cflags_devel $copts ]

$lopts				= [ -shared [ "-Wl,--version-script=" $*/exports  ~ j ] ]
$lflags_final	= [ $lflags_final $lopts [ "-Wl,-soname," libxapi.so ~ j ] ]
$lflags_debug	= [ $lflags_debug $lopts [ "-Wl,-soname," libxapi.so ~ j ] ]
$lflags_devel	= [ $lflags_devel $lopts [ "-Wl,-soname," libxapi.devel.so ~ j ] ]

# source files
+[@std.c]($dext = [ final.pic.o ]; $gendir = $dlibxapi; $rdirs = $dlibxapi; $cc; $cflags = $cflags_final)
+[@std.c]($dext = [ debug.pic.o ]; $gendir = $dlibxapi; $rdirs = $dlibxapi; $cc; $cflags = $cflags_debug)
+[@std.c]($dext = [ devel.pic.o ]; $gendir = $dlibxapi; $rdirs = $dlibxapi; $cc; $cflags = $cflags_devel)

##
## dependencies
##

# tests
[ @final ] : [ $libxapi_final ]
[ @debug ] : [ $libxapi_debug ]
[ @devel ] : [ $libxapi_devel ]

##
## formulas
##

# the SYS errtab is generated from available system header files
[ $dlibxapi/error/SYS.errtab ~ j ] : [ /usr/include/asm-generic/errno-base.h /usr/include/asm-generic/errno.h ]
{
	exec > [ $@ ]

	cat /usr/include/asm-generic/errno-base.h /usr/include/asm-generic/errno.h  | \
	> sed -e 's/#define\s\+\(E[A-Z]\+\)\s\+\([0-9]\+\)\s\+\/\*\s*\(.*\)\s\+\*\//\2\t\1\t\3/p; d'
}

# compiled sys errtab
+[@std.xapi.errtab]($dext = [ final.pic.o ]; $gendir = $dlibxapi; $apidata = [ 1 ]; $paths = [[ $dlibxapi/error/SYS.errtab ~ j ] [ $dlibxapi/error/XAPI.errtab ~ j]]; $cc; $cflags = $cflags_final)
+[@std.xapi.errtab]($dext = [ debug.pic.o ]; $gendir = $dlibxapi; $apidata = [ 1 ]; $paths = [[ $dlibxapi/error/SYS.errtab ~ j ] [ $dlibxapi/error/XAPI.errtab ~ j]]; $cc; $cflags = $cflags_debug)
+[@std.xapi.errtab]($dext = [ devel.pic.o ]; $gendir = $dlibxapi; $apidata = [ 1 ]; $paths = [[ $dlibxapi/error/SYS.errtab ~ j ] [ $dlibxapi/error/XAPI.errtab ~ j]]; $cc; $cflags = $cflags_devel)

# library exports
[ $*/exports ~ j ] : [ $* ~ lsr lx/c ]
{
	  (echo "{ global: "
	> sed 's/.*API\(DATA\)\?[[:space:]]\+\([a-zA-Z][0-9a-zA-Z_]*\).*/\2;/p; d' <(\
	  cat -- [ $@ ~ rx/ineedw fi ] )
	  echo "callstack;"
	> echo "local: *; };"
	) 1>[ $@ ]
}

# link the library
[ $libxapi_final ] : [ [ $*/exports ~ j ] [ $* ~ lsr sx/c/final.pic.o sy ] ]
{
	[ $cc ] [ $cflags_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_final ~ fi ] 
}

[ $libxapi_debug ] : [ [ $*/exports ~ j ] [ $* ~ lsr sx/c/debug.pic.o sy ] ]
{
	[ $cc ] [ $cflags_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_debug ~ fi ]
}

[ $libxapi_devel ] : [ [ $*/exports ~ j ] [ $* ~ lsr sx/c/devel.pic.o sy ] ]
{
	[ $cc ] [ $cflags_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_devel ~ fi ]
}

##
## tasks
##

[ @install.final ] : [ @final ]
{
	install -d																[ $destdir/$libdir ]
	install [ $libxapi_final ]								[ $destdir/$libdir/$libname ]
}

[ @install.debug ] : [ @debug ]
{
	install -d																[ $destdir/$libdir ]
	install [ $libxapi_debug ]								[ $destdir/$libdir/$libname ]
}

[ @installdevheaders ]
{
	install -d																[ $destdir/$incdir ]
	install [ $dlibxapi/xapi.h ]							[ $destdir/$incdir ]

	install -d																[ $destdir/$incdir/xapi ]
	install [ $dlibxapi/xapi/frame.h ]				[ $destdir/$incdir/xapi ]
}
