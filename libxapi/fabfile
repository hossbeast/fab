# definitions
$dcommon			= [ $*/../common ~ j ]
+[ $dcommon/vars.fab ]

# source invocations
+[ $dcommon ] @common

# variables
$libname 			= [ libxapi.so ]
$soname				= [ $libname ~ j ]
$libxapi  		= [ $dlibxapi/libxapi.so ~ j ]		# path to the library .so
$cflags				= [ $cflags -fPIC -DXAPI_PROVIDE_BACKTRACE [ $dlibxapi ~ lsr c -d s/^/-I ] $incdirs ]
$lflags				= [ -shared [ "-Wl,-soname," $soname ~ j ] ]

# source files
+[@std.c]($gendir = $dlibxapi; $rdirs = $dlibxapi; $dext = [ pic.o ]; -$cfabpaths; $cc $cflags)

##
## dependencies
##

# default NOFILE target - build library and all operators
[ @all ] : [ $libxapi ]

##
## formulas
##

# the SYS errtab is generated from available system header files
[ $dlibxapi/error/SYS.errtab ~ j ] : [ /usr/include/asm-generic/errno-base.h /usr/include/asm-generic/errno.h ]
{
	exec > [ $@ ]

	cat /usr/include/asm-generic/errno-base.h /usr/include/asm-generic/errno.h  | \
	> sed -e 's/#define\s\+\(E[A-Z]\+\)\s\+\([0-9]\+\)\s\+\/\*\s*\(.*\)\s\+\*\//\2\t\1\t\3/p; d'
}

# compiled sys errtab
+[@std.xapi.errtab]($gendir = $dlibxapi; $apidata = [ 1 ]; $paths = [[ $dlibxapi/error/SYS.errtab ~ j ] [ $dlibxapi/error/XAPI.errtab ~ j]]; $dext = [ pic.o ]; $cc $cflags)

# link the library
[ $libxapi ] : [ [ $cfabpaths ~ sx/c/pic.o ] [ $dlibxapi/error/SYS.errtab.pic.o ~ j ] [ $dlibxapi/error/XAPI.errtab.pic.o ~ j ] ]
{
	  (echo "{ global: "
	> sed 's/.*API\(DATA\)\?[[:space:]]\+\([a-zA-Z][0-9a-zA-Z_]*\).*/\2;/p; d' <(\
	  cat -- [ $@ ~ rx/aneedw lx/c ss u fi ] )
	  echo "callstack;"
	> echo "local: *; };"
	) 1>[ $dlibxapi/exports ]

	[ $cc ] [ $cflags ~ ss u fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags ~ fi ] [ "-Wl,--version-script=" $dlibxapi/exports ]
}

##
## tasks
##

[ @install ] : [ @all ]
{
	install -d																[ $destdir/$libdir ]
	install [ $libxapi ]											[ $destdir/$libdir/$libname ]
}

[ @installdevheaders ]
{
	install -d																[ $destdir/$incdir ]
	install [ $dlibxapi/xapi.h ]							[ $destdir/$incdir ]

	install -d																[ $destdir/$incdir/xapi ]
	install [ $dlibxapi/xapi/frame.h ]				[ $destdir/$incdir/xapi ]
}
