# definitions
+[ $*/../vars.fab ]

# source invocations
+[ $dcommon ]() @common

# variables
$basename     = [ narrator ]
$libname_eapi = [ lib $basename .so ~ j ]
$libname_xapi = [ lib $basename -xapi .so ~ j ]
$copts        = [ -fPIC [ $dlibnarrator ~ lsr c -d s/^/-I ]
  # include paths
  [ $dlibxapi $dlibxlinux ~ s/^/-I ]
]

# cflags variants
$cflags_eapi_final = [ $cflags_eapi_final $copts ]
$cflags_eapi_debug = [ $cflags_eapi_debug $copts ]
$cflags_eapi_devel = [ $cflags_eapi_devel $copts ]
$cflags_xapi_final = [ $cflags_xapi_final $copts ]
$cflags_xapi_debug = [ $cflags_xapi_debug $copts ]
$cflags_xapi_devel = [ $cflags_xapi_devel $copts ]

$lopts              = [ -shared [ -Wl,--version-script=$*/exports ~ j ] ]
$lflags_eapi_final  = [ $lopts $libxlinux_eapi_final [ -Wl,-soname,libnarrator.so ~ j ] ]
$lflags_eapi_debug  = [ $lopts $libxlinux_eapi_debug [ -Wl,-soname,libnarrator.so ~ j ] ]
$lflags_eapi_devel  = [ $lopts $libxlinux_eapi_devel [ -Wl,-soname,libnarrator-devel.so ~ j ] ]
$lflags_xapi_final  = [ $lopts $libxapi_xapi_final $libxlinux_xapi_final [ -Wl,-soname,libnarrator-xapi.so ~ j ] ]
$lflags_xapi_debug  = [ $lopts $libxapi_xapi_debug $libxlinux_xapi_debug [ -Wl,-soname,libnarrator-xapi.so ~ j ] ]
$lflags_xapi_devel  = [ $lopts $libxapi_xapi_devel $libxlinux_xapi_devel [ -Wl,-soname,libnarrator-xapi-devel.so ~ j ] ]

# source files, filter out tests
+[@std.c]($dext = [ eapi.final.pic.o ]; $rdirs = [ $* ~ ls l/integ o l/example d ]; $cc; $cflags = $cflags_eapi_final)
+[@std.c]($dext = [ eapi.debug.pic.o ]; $rdirs = [ $* ~ ls l/integ o l/example d ]; $cc; $cflags = $cflags_eapi_debug)
+[@std.c]($dext = [ eapi.devel.pic.o ]; $rdirs = [ $* ~ ls l/integ o l/example d ]; $cc; $cflags = $cflags_eapi_devel)
+[@std.c]($dext = [ xapi.final.pic.o ]; $rdirs = [ $* ~ ls l/integ o l/example d ]; $cc; $cflags = $cflags_xapi_final)
+[@std.c]($dext = [ xapi.debug.pic.o ]; $rdirs = [ $* ~ ls l/integ o l/example d ]; $cc; $cflags = $cflags_xapi_debug)
+[@std.c]($dext = [ xapi.devel.pic.o ]; $rdirs = [ $* ~ ls l/integ o l/example d ]; $cc; $cflags = $cflags_xapi_devel)

##
## dependencies
##

# default NOFILE target - build everything
[ @all ] : [ @release @test.fast ]

[ @release ] : [ @release.eapi @release.xapi ]
[ @release.eapi ] : [ @final.eapi @debug.eapi @devel.eapi ]
[ @release.xapi ] : [ @final.xapi @debug.xapi @devel.xapi ]
[ @final ] : [ @final.eapi @final.xapi ]
[ @final.eapi ] : [ $libnarrator_eapi_final ]
[ @final.xapi ] : [ $libnarrator_xapi_final ]
[ @debug ] : [ @debug.eapi @debug.xapi ]
[ @debug.eapi ] : [ $libnarrator_eapi_debug ]
[ @debug.xapi ] : [ $libnarrator_xapi_debug ]
[ @devel ] : [ @devel.eapi @devel.xapi ]
[ @devel.eapi ] : [ $libnarrator_eapi_devel ]
[ @devel.xapi ] : [ $libnarrator_xapi_devel ]

##
## formulas
##

# library exports
[ $*/exports ~ j ] : [ $* ~ lsr lx/c ]
{
    (echo "{ global: "
  > perl -ne 'if(/API(?:DATA)?.*? ([a-zA-Z_][a-zA-Z0-9_]+) *(?:\(|=|;)/) { print "$1;\n" }' <(\
    cat -- [ $@ ~ rx/ineed fi ] )
  > echo "local: *; };"
   ) 1>[ $@ ]
}

# link the library
[ $libnarrator_eapi_final ] : [ [ $*/exports ~ j ] [ $* ~ ls l/integ o l/example d lsr sx/c/eapi.final.pic.o sy ] ]
{
  [ $cc ] [ $cflags_eapi_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_eapi_final ~ fi ]
}

[ $libnarrator_eapi_debug ] : [ [ $*/exports ~ j ] [ $* ~ ls l/integ o l/example d lsr sx/c/eapi.debug.pic.o sy ] ]
{
  [ $cc ] [ $cflags_eapi_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_eapi_debug ~ fi ]
}

[ $libnarrator_eapi_devel ] : [ [ $*/exports ~ j ]  [ $* ~ ls l/integ o l/example d lsr sx/c/eapi.devel.pic.o sy ] ]
{
  [ $cc ] [ $cflags_eapi_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_eapi_devel ~ fi ]
}

[ $libnarrator_xapi_final ] : [ [ $*/exports ~ j ] [ $* ~ ls l/integ o l/example d lsr sx/c/xapi.final.pic.o sy ] ]
{
  [ $cc ] [ $cflags_xapi_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_xapi_final ~ fi ]
}

[ $libnarrator_xapi_debug ] : [ [ $*/exports ~ j ] [ $* ~ ls l/integ o l/example d lsr sx/c/xapi.debug.pic.o sy ] ]
{
  [ $cc ] [ $cflags_xapi_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_xapi_debug ~ fi ]
}

[ $libnarrator_xapi_devel ] : [ [ $*/exports ~ j ] [ $* ~ ls l/integ o l/example d lsr sx/c/xapi.devel.pic.o sy ] ]
{
  [ $cc ] [ $cflags_xapi_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_xapi_devel ~ fi ]
}

[ $libnarrator_eapi_final ] :^ [ $libxlinux_eapi_final ]
[ $libnarrator_eapi_debug ] :^ [ $libxlinux_eapi_debug ]
[ $libnarrator_eapi_devel ] :^ [ $libxlinux_eapi_devel ]
[ $libnarrator_xapi_final ] :^ [ $libxlinux_xapi_final $libxapi_xapi_final ]
[ $libnarrator_xapi_debug ] :^ [ $libxlinux_xapi_debug $libxapi_xapi_debug ]
[ $libnarrator_xapi_devel ] :^ [ $libxlinux_xapi_devel $libxapi_xapi_devel ]

##
## tasks
##

[ @install.final.eapi ] : [ @final.eapi ]
{
  install -d                                      [ $destdir/$libdir ]
  install [ $libnarrator_eapi_final ]             [ $destdir/$libdir/$libname_eapi ]
}

[ @install.debug.eapi ] : [ @debug.eapi ]
{
  install -d                                      [ $destdir/$libdir ]
  install [ $libnarrator_eapi_debug ]             [ $destdir/$libdir/$libname_eapi ]
}

[ @install.final.xapi ] : [ @final.xapi ]
{
  install -d                                      [ $destdir/$libdir ]
  install [ $libnarrator_xapi_final ]             [ $destdir/$libdir/$libname_xapi ]
}

[ @install.debug.xapi ] : [ @debug.xapi ]
{
  install -d                                      [ $destdir/$libdir ]
  install [ $libnarrator_xapi_debug ]             [ $destdir/$libdir/$libname_xapi ]
}

[ @installdevheaders ]
{
  install -d                                      [ $destdir/$incdir ]
  install [ $dlibnarrator/narrator.h  ]           [ $destdir/$incdir/ ]

  install -d                                      [ $destdir/$incdir/narrator ]
  install [ $dlibnarrator/narrator/fixed.h ]      [ $destdir/$incdir/narrator/ ]
  install [ $dlibnarrator/narrator/growing.h ]    [ $destdir/$incdir/narrator/ ]
}

#
# examples
#

+[@std.c]($dext = [ xapi.devel.pic.o ]; $rdirs = [ $*/example ~ j ]; $cc; $cflags = [ $cflags_xapi_devel ])

[ $*/example ~ j lsr sx/c/example sy dj shift ] ::^ [ $libnarrator_xapi_devel ]
[ $*/example ~ j lsr sx/c/example sy dj shift ] :: [ $< ~ sx/example/xapi.devel.pic.o ]
{
  [ [ $cc ] -o [ $@ ] [ $cflags_xapi_devel ~ uu ] [ $@ ~ rx/aneedw lx/o ss u ] [ $libxapi_xapi_devel $libxlinux_xapi_devel $libnarrator_xapi_devel ] [
  ] [ $* $dlibxapi $dlibxlinux ~ [ ?{ [ rb{$*/example} ~ j ] "s{^}{'-Wl,-rpath,$ORIGIN/}" "s{$}{'}" ~ fi ] ] ~ fi ]
}


#
# tests
#  for rationale see test/README.md
#

+[@std.c]($dext = [ xapi.devel.pic.o ]; $rdirs = [ $*/integ ~ j ]; $cc; $cflags = [ $cflags_xapi_devel [ $droot/test ~ j s/^/-I ] ])
+[@std.xapi.errtab]($dext = [ xapi.devel.pic.o ]; $dirs = [ $droot/test/errtab ~ j ]; $apidata = [1]; $cc; $cflags = $cflags_xapi_devel)

[ $*/integ ~ j lsr sx/c/test sy dj shift ] ::^ [ [ $droot/test/errtab/TEST.errtab.xapi.devel.pic.o ~ j ] $libnarrator_xapi_devel ]
[ $*/integ ~ j lsr sx/c/test sy dj shift ] :: [ $< ~ sx/test/xapi.devel.pic.o ]
{
  [ [ $cc ] -o [ $@ ] [ $cflags_xapi_devel ~ uu ] [ $@ ~ rx/aneedw lx/o ss u ] [ $libxapi_xapi_devel $libxlinux_xapi_devel $libnarrator_xapi_devel ] [
  ] [ $* $dlibxapi $dlibxlinux ~ [ ?{ [ rb{$*/integ} ~ j ] "s{^}{'-Wl,-rpath,$ORIGIN/}" "s{$}{'}" ~ fi ] ] ~ fi ]
}

[ @test ] : [ $*/integ ~ j lsr sx/c/test sy ]
{
  (
    set -e
    for x in [ $@ ~ rx/ineed fi ] ; do [ $valgrind_runner ] $x ; done
  ) | tee /dev/fd/501
  > exit ${PIPESTATUS[0]}
}

[ @test.fast ] : [ $*/integ ~ j lsr sx/c/test sy ]
{
  (
    set -e
    [ $@ ~ rx/ineed fi/; ]
  ) | tee /dev/fd/501
  > exit ${PIPESTATUS[0]}
}
