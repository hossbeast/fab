# source directories
$dcommon			= [ $*/../common ~ j ]
$dlibxlinux	  = [ $* ]
$dlibxapi			= [ $dcommon/../libxapi ~ j ]

# variable defs, $cc, $cflags, etc
# common targets xmem, map, etc
+[ $dcommon/vars.fab ]
+[ $dcommon ] @common

##
## variables
##
$libname 			= [ libxlinux.so ]
$soname				= [ $libname ~ j ]
$libxlinux		= [ $dlibxlinux/libxlinux.so ~ j ]		# path to the library .so
$cflags				= [ $cflags -fPIC [ $dlibxlinux ~ s/^/-I ] $incdirs ]
$lflags				= [ -shared, [ "-Wl,-soname," $soname ] ]

# source files
+[@std.c]($gendir = $dlibxlinux; $rdirs = $dlibxlinux; $ext = [ pic.o ]; -$cobjpaths; $cc $cflags)
+[@std.xapi.errtab] ($gendir = $dlibxlinux; $dirs = $dlibxlinux; $ext = [ pic.o ]; $cc $cflags)

##
## dependencies
##

# default NOFILE target - build library and all operators
[ @all ] : [ $libxlinux $oplist ]

##
## formulas
##

# link the library
[ $libxlinux ] : [ $cobjpaths ]
{
	  exec 99>&1 1>[ $dlibxlinux/exports ]
	  echo "{ global: "
	> sed 's/.*API\(DATA\)\?[[:space:]]\+\([a-zA-Z][0-9a-zA-Z_]*\).*/\2;/p; d' <(\
	  cat -- [ $@ ~ rx/aneedw/xm/<c>/ss/u/fi ] )
	> echo "local: *; };"
		exec 1>&99

	[ $cc ] [ $cflags ~ ss/u/fi ] -o [ $@ ] [ $@ ~ rx/aneedw/xm/<o>/ss/u/fi ] [ $lflags ] [ "-Wl,--version-script=" $dlibxlinux/exports]
}

##
## tasks
##

[ @install ] : [ @all ]
{
	install -d																					[ $destdir/$libdir ]
	install [ $libxlinux ]															[ $destdir/$libdir/$libname ]
	install [ $dlibxlinux/xlinux.h	]										[ $destdir/$incdir/xlinux.h ]

	install -d																					[ $destdir/$incdir/xlinux ]
	install [ $dlibxlinux/xlinux/wstdlib/wstdlib.h ]		[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xdirent/xdirent.h ]		[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xdlfcn/xdlfcn.h ]			[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xfcntl/xfcntl.h ]			[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xftw/xftw.h ]					[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xgrp/xgrp.h ]					[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xmman/xmman.h ]				[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xpwd/xpwd.h ]					[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xstat/xstat.h ]				[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xstdlib/xstdlib.h ]		[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xtime/xtime.h ]				[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xunistd/xunistd.h ]		[ $destdir/$incdir/xlinux/ ]
}

[ @uninstall ]
{
	rm -f																							[ $destdir/$libdir/$libname ]
	rm -f																							[ $destdir/$incdir/xlinux.h ]
	rm -f																							[ $destdir/$incdir/xlinux ]
}
