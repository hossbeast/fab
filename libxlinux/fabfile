# source directories
+[ $*/../vars.fab ]

# source invocations
+[ $dcommon ]() @common

# variables
$libname 			= [ libxlinux.so ]
$copts				= [ -fPIC [ $dlibxlinux ~ lsr c -d s/^/-I ]
	# include paths - mark as system to preclude dependency discovery from gcc
	[ $dlibxapi $dliblistwise ~ s/^/-I ]
]
$cflags_final = [ $cflags_final $copts ]
$cflags_debug = [ $cflags_debug $copts ]
$cflags_devel = [ $cflags_devel $copts ]

# -lrt required for glibc < 2.17 as per man clock_gettime
$lopts				= [ -ldl -lrt -shared  [ -Wl,--version-script=$*/exports ~ j ] ]
$lflags_final	= [ $libxapi_final $lopts [ -Wl,-soname,libxlinux.so ~ j ] ]
$lflags_debug	= [ $libxapi_debug $lopts [ -Wl,-soname,libxlinux.so ~ j ] ]
$lflags_devel	= [ $libxapi_devel $lopts [ -Wl,-soname,libxlinux.devel.so ~ j ] ]

# source files
+[@std.c]($dext = [ final.pic.o ]; $rdirs = $dlibxlinux; $cc; $cflags = $cflags_final)
+[@std.c]($dext = [ debug.pic.o ]; $rdirs = $dlibxlinux; $cc; $cflags = $cflags_debug)
+[@std.c]($dext = [ devel.pic.o ]; $rdirs = $dlibxlinux; $cc; $cflags = $cflags_devel)
+[@std.xapi.errtab]($dext = [ final.pic.o ]; $gendir = $dlibxlinux; $rdirs = $dlibxlinux; $apidata = [1]; $cc; $cflags = $cflags_final)
+[@std.xapi.errtab]($dext = [ debug.pic.o ]; $gendir = $dlibxlinux; $rdirs = $dlibxlinux; $apidata = [1]; $cc; $cflags = $cflags_debug)
+[@std.xapi.errtab]($dext = [ devel.pic.o ]; $gendir = $dlibxlinux; $rdirs = $dlibxlinux; $apidata = [1]; $cc; $cflags = $cflags_devel)

##
## dependencies
##

# default NOFILE target - build library and all operators
[ @all ] : [ @final @debug @devel ]
[ @final ] : [ $libxlinux_final ]
[ @debug ] : [ $libxlinux_debug ]
[ @devel ] : [ $libxlinux_devel ]

##
## formulas
##

# library exports
[ $*/exports ~ j ] : [ $* ~ lsr lx/c ]
{
	  (echo "{ global: "
	> perl -ne 'if(/API(?:DATA)?.*? ([a-zA-Z_][a-zA-Z0-9_]+) *(?:\(|=)/) { print "$1;\n" }' <(\
	  cat -- [ $@ ~ rx/ineed fi ] )
	> echo "local: *; };"
	  ) 1>[ $@ ]
}

# link the library
[ $libxlinux_final ] : [ [ $*/exports ~ j ] [ $* ~ lsr sx/c/final.pic.o sy ] ]
{
	[ $cc ] [ $cflags_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_final ~ fi ]
}

[ $libxlinux_debug ] : [ [ $*/exports ~ j ] [ $* ~ lsr sx/c/debug.pic.o sy ] ]
{
	[ $cc ] [ $cflags_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_debug ~ fi ]
}

[ $libxlinux_devel ] : [ [ $*/exports ~ j ] [ $* ~ lsr sx/c/devel.pic.o sy ] ]
{
	[ $cc ] [ $cflags_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_devel ~ fi ]
}

[ $libxlinux_final ] :^ [ $libxapi_final ]
[ $libxlinux_debug ] :^ [ $libxapi_debug ]
[ $libxlinux_devel ] :^ [ $libxapi_devel ]

##
## tasks
##

[ @install.final ] : [ @final ]
{
	install -d																					[ $destdir/$libdir ]
	install [ $libxlinux_final ]												[ $destdir/$libdir/$libname ]
}

[ @install.debug ] : [ @debug ]
{
	install -d																					[ $destdir/$libdir ]
	install [ $libxlinux_debug ]												[ $destdir/$libdir/$libname ]
}

[ @installdevheaders ]
{
	install -d																					[ $destdir/$incdir ]
	install [ $dlibxlinux/xlinux.h ]										[ $destdir/$incdir/xlinux/ ]

	install -d																					[ $destdir/$incdir/xlinux ]
	install [ $dlibxlinux/xlinux/xdirent.h ]						[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xdlfcn.h ]							[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xfcntl.h ]							[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xftw.h ]								[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xgrp.h ]								[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xmman.h ]							[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xpwd.h ]								[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xstat.h ]							[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xstdlib.h ]						[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xstring.h ]						[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xtime.h ]							[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xunistd.h ]						[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xsignal.h ]						[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xfile.h ]							[ $destdir/$incdir/xlinux/ ]
	install [ $dlibxlinux/xlinux/xprctl.h ]							[ $destdir/$incdir/xlinux/ ]
}
