# definitions
+[ $*/../../vars.fab ]

+[ $dcommon]() @common

# variables
$cflags = [
  [ -DFABVERSIONS="\""$VERSIONS"\"" ~ j ]
  [ -DFABVERSIONN="\""$VERSIONN"\"" ~ j ]
  [ [ $* ~ lsr c -d ] $dlibxapi $dlibxlinux $dlibnarrator $dliblogger $dlibvalue ~ s/^/-I ]
]

$dlibdeps = [ $dlibxapi $dlibxlinux $dlibnarrator $dliblogger $dlibvalyria $dlibvalue $dlibyyutil ]

$libdeps_xapi_final = [ $libxapi_xapi_final $libxlinux_xapi_final $libnarrator_xapi_final $liblogger_xapi_final $libvalyria_xapi_final $libvalue_xapi_final $libyyutil_xapi_final ]
$libdeps_xapi_debug = [ $libxapi_xapi_debug $libxlinux_xapi_debug $libnarrator_xapi_debug $liblogger_xapi_debug $libvalyria_xapi_debug $libvalue_xapi_debug $libyyutil_xapi_debug ]
$libdeps_xapi_devel = [ $libxapi_xapi_devel $libxlinux_xapi_devel $libnarrator_xapi_devel $liblogger_xapi_devel $libvalyria_xapi_devel $libvalue_xapi_devel $libyyutil_xapi_devel ]

$cflags_xapi_final = [ $cflags $cflags_xapi_final ]
$cflags_xapi_debug = [ $cflags $cflags_xapi_debug ]
$cflags_xapi_devel = [ $cflags $cflags_xapi_devel ]

$rpath = [
  [ $dlibdeps ~ [ ?{ [ rb{$*} ~ j ] "s{^}{'-Wl,-rpath,$ORIGIN/}" "s{$}{'}" ~ fi ] ]
]
$lopts = [ -ldl ]
$lflags_xapi_final = [ $lflags_xapi_final $lopts $libdeps_xapi_final ]
$lflags_xapi_debug = [ $lflags_xapi_debug $lopts $libdeps_xapi_debug ]
$lflags_xapi_devel = [ $lflags_xapi_devel $lopts $libdeps_xapi_devel $rpath ]

# c files
+[@std.c]($dext = [ xapi.final.o ]; $rdirs = $*; $cc; $cflags = $cflags_xapi_final)
+[@std.c]($dext = [ xapi.debug.o ]; $rdirs = $*; $cc; $cflags = $cflags_xapi_debug)
+[@std.c]($dext = [ xapi.devel.o ]; $rdirs = $*; $cc; $cflags = $cflags_xapi_devel)

# errtab
+[@std.xapi.errtab]($dext = [ xapi.final.o ]; $rdirs = $*; $cc; $cflags = $cflags_xapi_final)
+[@std.xapi.errtab]($dext = [ xapi.debug.o ]; $rdirs = $*; $cc; $cflags = $cflags_xapi_debug)
+[@std.xapi.errtab]($dext = [ xapi.devel.o ]; $rdirs = $*; $cc; $cflags = $cflags_xapi_devel)

# catchall node
[ @release ] : [ @all ]
[ @all ] : [ @final @debug @devel ]
[ @final ] : [ $value_xapi_final ]
[ @debug ] : [ $value_xapi_debug ]
[ @devel ] : [ $value_xapi_devel ]

#
# formulas
#
[ $value_xapi_final ] : [ $*/main.xapi.final.o ~ j ]
{
  [ $cc ] [ $cflags_xapi_final $cflags ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_xapi_final ~ fi ]
}

[ $value_xapi_debug ] : [ $*/main.xapi.debug.o ~ j ]
{
  [ $cc ] [ $cflags_xapi_debug $cflags ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_xapi_debug ~ fi ]
}

[ $value_xapi_devel ] : [ $*/main.xapi.devel.o ~ j ]
{
  [ $cc ] [ $cflags_xapi_devel $cflags ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_xapi_devel ~ fi ]
}

[ $value_xapi_final ] :^ [ $libdeps_xapi_final ]
[ $value_xapi_debug ] :^ [ $libdeps_xapi_debug ]
[ $value_xapi_devel ] :^ [ $libdeps_xapi_devel ]
