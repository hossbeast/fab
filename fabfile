# directories
$dcommon      = [ $*/common ]
$dliblistwise = [ $*/liblistwise ]
$dlistwise    = [ $*/listwise ]
$dfab         = [ $*/fab ]

# invocations
+[ $dliblistwise ](-$liblistwise)																													@liblistwise
+[ $dlistwise ](-$listwise; $liblistwise; $incdirs = [ -I$dliblistwise ~ j ] )						@listwise
+[ $dfab ](-$fab; -$faboplist; -$fabd; $liblistwise; $incdirs = [ -I$dliblistwise ~ j ] )	@fab

# default target - make everything
[ @all ] 				: [ @liblistwise.all @listwise.all @fab.all ]

# inter-module dependencies
[ $listwise ]		:^ [ $liblistwise ]
[ $fab ]				:^ [ $liblistwise ]
[ $fabd ]				:^ [ $liblistwise ]
[ $faboplist ]	:^ [ $liblistwise ]

# supertasks
[ @install ]		: [               @liblistwise.install   @listwise.install   @fab.install    ]
[ @uninstall ]	: [               @liblistwise.uninstall @listwise.uninstall @fab.uninstall  ]
[ @clean ]			: [ @common.clean @liblistwise.clean     @listwise.clean     @fab.clean      ]

[ @scripts ]
{
	exec 2>/dev/null
	fab --bslic-fab -j 4 -k [ $*/make64.sh ] @all
	fab --bslic-fab -j 4 -k [ $*/install64.sh ] +n @install -K destdir -K incdir -K bindir -K libdir -K dlibdir -K lwopdir -K fablwopdir -K fabcachedir -K fabtmpdir -K fabinvokedir
}
