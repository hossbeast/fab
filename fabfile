# definitions
+[ $*/vars.fab ]

# source invocations
+[ $dfabcore ]()      @fabcore
+[ $dfabd ]()         @fabd
+[ $dliblogger ]()    @liblogger
+[ $dliblorien ]()    @liblorien
+[ $dlibmoria ]()     @libmoria
+[ $dlibnarrator ]()  @libnarrator
+[ $dlibvalue ]()     @libvalue
+[ $dlibvalyria ]()   @libvalyria
+[ $dlibxapi ]()      @libxapi
+[ $dlibxlinux ]()    @libxlinux
+[ $dlibxunit ]()     @libxunit
+[ $dlibyyutil ]()    @libyyutil
+[ $dxunit ]()        @xunit

# build artifacts
[ @all ] : [ @release @test.fast ]
[ @release ] : [ @final @debug @devel ]
[ @final ] : [
  @fabcore.final @liblogger.final @liblorien.final @libmoria.final
  @libnarrator.final @libvalue.final @libvalyria.final @libxapi.final @libxlinux.final @libxunit.final
  @libyyutil.final @xunit.final
]

[ @debug ] : [
  @fabcore.debug @liblogger.debug @liblorien.debug @libmoria.debug
  @libnarrator.debug @libvalue.debug @libvalyria.debug @libxapi.debug @libxlinux.debug @libxunit.debug
  @libyyutil.debug @xunit.debug
]

[ @devel ] : [
  @fabcore.devel @liblogger.devel @liblorien.devel @libmoria.devel
  @libnarrator.devel @libvalue.devel @libvalyria.devel @libxapi.devel @libxlinux.devel @libxunit.devel
  @libyyutil.devel @xunit.devel
]

# install libraries
[ @install.base.final ] : [ @install.base.final.xapi ]
[ @install.base.debug ] : [ @install.base.debug.xapi ]
[ @install.base.final.xapi ] : [ @libxapi.install.final.xapi @libxlinux.install.final.xapi @libvalyria.install.final.xapi ]
[ @install.base.debug.xapi ] : [ @libxapi.install.debug.xapi @libxlinux.install.debug.xapi @libvalyria.install.debug.xapi ]

# install local and dist
[ @install.local.final ] : [ @install.local.final.xapi ]
[ @install.local.debug ] : [ @install.local.debug.xapi ]
[ @install.dist.final ] : [ @install.dist.final.xapi ]
[ @install.dist.debug ] : [ @install.dist.debug.xapi ]

[ @install.local.final.xapi ] : [ @install.base.final.xapi @fabcore.install.local.final ]
[ @install.local.debug.xapi ] : [ @install.base.debug.xapi  @fabcore.install.local.debug ]
[ @install.dist.final.xapi ] : [ @install.base.final.xapi @fabcore.install.dist.final ]
[ @install.dist.debug.xapi ] : [ @install.base.debug.xapi  @fabcore.install.dist.debug ]

# doc
[ @install.man ] : [ @fabcore.install.man ]

# tests
[ @test ] : [ @fabd.test @liblogger.test @liblorien.test @libmoria.test @libnarrator.test ]
[ @test ] : [ @libvalue.test @libvalyria.test @libxapi.test @libxlinux.test @libxunit.test @libyyutil.test ]
[ @test ] : [ @xunit.test ]

[ @test.fast ] : [ @fabd.test.fast @liblogger.test.fast @liblorien.test.fast @libmoria.test.fast @libnarrator.test.fast ]
[ @test.fast ] : [ @libvalue.test.fast @libvalyria.test.fast @libxapi.test.fast @libxlinux.test.fast @libxunit.test.fast @libyyutil.test.fast ]
[ @test.fast ] : [ @xunit.test.fast ]
