# directories
$dcommon				= [ $*/common ]

# variable defs, $cc, $cflags, etc
+[ $dcommon/vars.fab ]

$cflags = [ $cflags [ -I $dcommon ] ]

# c files
+[@std.c]($dcommon ^ $dirs, -$cfabpaths)

#
# compile all c files
#

[ @all ] : [ $cfabpaths ]

#
# tasks
#

[ @clean ]
{
	rm -f [ $dcommon/*.o ] 2>/dev/null
}
