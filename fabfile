# definitions
+[ $*/vars.fab ]

# source invocations
+[ $dfabcore ]()      @fabcore
+[ $dliblistwise ]()  @liblistwise
+[ $dliblogger ]()    @liblogger
+[ $dliblorien ]()    @liblorien
+[ $dlibmoria ]()     @libmoria
+[ $dlibnarrator ]()  @libnarrator
+[ $dlibvalue ]()     @libvalue
+[ $dlibvalyria ]()   @libvalyria
+[ $dlibxapi ]()      @libxapi
+[ $dlibxlinux ]()    @libxlinux
+[ $dlibxunit ]()     @libxunit
+[ $dlibyyutil ]()    @libyyutil
+[ $dlistwise ]()     @listwise
+[ $dxunit ]()        @xunit

# build artifacts
[ @all ] : [ @release @test ]
[ @release ] : [ @final @debug @devel ]
[ @final ] : [
  @fabcore.final @liblistwise.final @liblogger.final @liblorien.final @libmoria.final
  @libnarrator.final @libvalue.final @libvalyria.final @libxapi.final @libxlinux.final @libxunit.final
  @libyyutil.final @listwise.final @xunit.final
]

[ @debug ] : [
  @fabcore.debug @liblistwise.debug @liblogger.debug @liblorien.debug @libmoria.debug
  @libnarrator.debug @libvalue.debug @libvalyria.debug @libxapi.debug @libxlinux.debug @libxunit.debug
  @libyyutil.debug @listwise.debug @xunit.debug
]

[ @devel ] : [
  @fabcore.devel @liblistwise.devel @liblogger.devel @liblorien.devel @libmoria.devel
  @libnarrator.devel @libvalue.devel @libvalyria.devel @libxapi.devel @libxlinux.devel @libxunit.devel
  @libyyutil.devel @listwise.devel @xunit.devel
]

# install libraries
[ @install.base.final ] : [ @install.base.final.xapi ]
[ @install.base.debug ] : [ @install.base.debug.xapi ]
[ @install.base.final.xapi ] : [ @libxapi.install.final.xapi @libxlinux.install.final.xapi @libvalyria.install.final.xapi @liblistwise.install.final.xapi @listwise.install.final ]
[ @install.base.debug.xapi ] : [ @libxapi.install.debug.xapi @libxlinux.install.debug.xapi @libvalyria.install.debug.xapi @liblistwise.install.debug.xapi @listwise.install.debug ]

# install local and dist
[ @install.local.final ] : [ @install.local.final.xapi ]
[ @install.local.debug ] : [ @install.local.debug.xapi ]
[ @install.dist.final ] : [ @install.dist.final.xapi ]
[ @install.dist.debug ] : [ @install.dist.debug.xapi ]

[ @install.local.final.xapi ] : [ @install.base.final.xapi @fabcore.install.local.final ]
[ @install.local.debug.xapi ] : [ @install.base.debug.xapi  @fabcore.install.local.debug ]
[ @install.dist.final.xapi ] : [ @install.base.final.xapi @fabcore.install.dist.final ]
[ @install.dist.debug.xapi ] : [ @install.base.debug.xapi  @fabcore.install.dist.debug ]

# doc
[ @install.man ] : [ @fabcore.install.man @listwise.install.man ]

# non-xunit tests
[ @test ] : [ @fabcore.test @liblistwise.test @liblogger.test @liblorien.test @libmoria.test @libnarrator.test ]
[ @test ] : [ @libvalue.test @libvalyria.test @libxapi.test @libxlinux.test @libxunit.test @libyyutil.test @listwise.test ]
[ @test ] : [ @xunit.test ]
