# definitions
$dcommon = [ $*/common ~ j ]
+[ $dcommon/vars.fab ]

# source invocations
+[ $dcommon ]()																											@common
+[ $dlibxapi ](-$libxapi)																						@libxapi
+[ $dlibxlinux ](-$libxlinux;     $libxapi)													@libxlinux
+[ $dliblistwise ](-$liblistwise; $libxapi $libxlinux)							@liblistwise
+[ $dlistwise ](-$listwise;       $libxapi $libxlinux $liblistwise)	@listwise
+[ $dfab ](-$fab; -$faboplist;    $libxapi $libxlinux $liblistwise)	@fab

# default target - make everything
[ @all ] 				: [ @libxapi.all @libxlinux.all @liblistwise.all @listwise.all @fab.all ]

# inter-module dependencies
[ $libxlinux ]	:^ [ $libxapi ]
[ $liblistwise ] :^ [ $libxapi $libxlinux ]
[ $listwise ]		 :^ [ $libxapi $libxlinux $liblistwise ]
[ $fab ]				 :^ [ $libxapi $libxlinux $liblistwise ]
[ $faboplist ]	 :^ [ $libxapi $libxlinux $liblistwise ]

# supertasks
[ @install ]		: [ @xapi.install	  @libxlinux.install   @liblistwise.install   @listwise.install   @fab.install ]

# create scripts
[ @scripts ]
{
	exec 2>/dev/null
	> fab -v '$dvel=[1]' --bslic-fab @all	\
	-k [ $*/make64.sh ]

	> fab -v '$dvel=[1]' --bslic-fab +n @install -K destdir -K incdir -K bindir -K libdir -K dlibdir -K lwopdir -K fablwopdir -K fabcachedir -K fabtmpdir -K fabinvokedir	\
	-k [ $*/install64.sh ]
}
