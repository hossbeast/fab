# variable defs, $cc, $cflags, etc
$dcommon = [ $* ]
+[ $dcommon/vars.fab ]

$cflags = [ $cflags [ -I $dcommon ~ j ] ]

# c files
+[@std.c]($dirs = $dcommon; -$cfabpaths; $cc $cflags)

#
# compile all o files
#

[ @all ] : [ $cfabpaths ~ xs/<o> ]

#
# tasks
#

[ @clean ]
{
	rm -f [ $dcommon/*.o ] 2>/dev/null
}
