# directories
$dcommon      = [ $*/common ~ j ]
$dlibxapi			= [ $*/libxapi ~ j ]
$dlibxlinux		= [ $*/libxlinux ~ j ]
$dliblistwise = [ $*/liblistwise ~ j ]
$dlistwise    = [ $*/listwise ~ j ]
$dfab         = [ $*/fab ~ j ]

# invocations
+[ $dlibxapi ](-$libxapi; $dcommon)																	@libxapi
+[ $dlibxlinux ](-$libxlinux; $libxapi $dcommon)										@libxlinux
+[ $dliblistwise ](-$liblistwise; $libxapi $libxlinux)							@liblistwise
+[ $dlistwise ](-$listwise; $liblistwise $libxapi $libxlinux)				@listwise
+[ $dfab ](-$fab; -$faboplist; $liblistwise $libxapi $libxlinux)		@fab

# default target - make everything
[ @all ] 				: [ @libxapi.all @libxlinux.all @liblistwise.all @listwise.all @fab.all ]

# inter-module dependencies
[ $libxlinux ]   :^ [ $libxapi ]
[ $liblistwise ] :^ [ $libxapi $libxlinux ]
[ $listwise ]		 :^ [ $libxapi $libxlinux $liblistwise ]
[ $fab ]				 :^ [ $libxapi $libxlinux $liblistwise ]
[ $faboplist ]	 :^ [ $libxapi $libxlinux $liblistwise ]

# supertasks
[ @install ]		: [ @xapi.install	  @libxlinux.install   @liblistwise.install   @listwise.install   @fab.install ]
[ @uninstall ]	: [ @xapi.uninstall @libxlinux.uninstall @liblistwise.uninstall @listwise.uninstall @fab.uninstall ]

[ @scripts ]
{
	exec 2>/dev/null
	fab --bslic-fab -k [ $*/make64.sh ] @all
	fab --bslic-fab -k [ $*/install64.sh ] +n @install -K destdir -K incdir -K bindir -K libdir -K dlibdir -K lwopdir -K fablwopdir -K fabcachedir -K fabtmpdir -K fabinvokedir
}
