# directories
$dcommon      = [ $*/common ~ j ]
$dliblistwise = [ $*/liblistwise ~ j ]
$dlistwise    = [ $*/listwise ~ j ]
$dxapi				= [ $*/xapi ~ j ]
$dlibxlinux		= [ $*/libxlinux ~ j ]
$dfab         = [ $*/fab ~ j ]

$incdirs 			= [ $dliblistwise [ $dliblistwise/listwise ~ j ] ~ s/^/-I ]

# invocations
+[ $dxapi ](-$libxapi; $dcommon $dxapi)																				@xapi
+[ $dlibxlinux ](-$libxlinux; $libxapi $dcommon $dxapi)												@libxlinux
+[ $dliblistwise ](-$liblistwise; $libxapi $libxlinux)												@liblistwise
+[ $dlistwise ](-$listwise; $liblistwise $libxapi $libxlinux $incdirs)				@listwise
+[ $dfab ](-$fab; -$faboplist; $liblistwise $libxapi $libxlinux $incdirs)			@fab

# default target - make everything
[ @all ] 				: [ @liblistwise.all @listwise.all @xapi.all @libxlinux.all @fab.all ]

# inter-module dependencies
[ $libxlinux ]   :^ [ $libxapi ]
[ $liblistwise ] :^ [ $libxapi $libxlinux ]
[ $listwise ]		 :^ [ $libxapi $libxlinux $liblistwise $libxapi ]
[ $fab ]				 :^ [ $libxapi $libxlinux $liblistwise $libxapi ]
[ $faboplist ]	 :^ [ $libxapi $libxlinux $liblistwise $libxapi ]

# supertasks
[ @install ]		: [               @liblistwise.install   @listwise.install   @xapi.install	 @libxlinux.install   @fab.install ]
[ @uninstall ]	: [               @liblistwise.uninstall @listwise.uninstall @xapi.uninstall @libxlinux.uninstall @fab.uninstall ]
[ @clean ]			: [ @common.clean @liblistwise.clean     @listwise.clean     @xapi.clean		 @libxlinux.clean     @fab.clean ]

[ @scripts ]
{
	exec 2>/dev/null
	fab --bslic-fab -k [ $*/make64.sh ] @all
	fab --bslic-fab -k [ $*/install64.sh ] +n @install -K destdir -K incdir -K bindir -K libdir -K dlibdir -K lwopdir -K fablwopdir -K fabcachedir -K fabtmpdir -K fabinvokedir
}
