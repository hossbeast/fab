# definitions
+[ $*/vars.fab ]

# source invocations
+[ $dcommon ]()				@common
+[ $dlibxapi ]()			@libxapi
+[ $dlibxlinux ]()		@libxlinux
+[ $dlibpstring ]()		@libpstring
+[ $dliblistwise ]()	@liblistwise
+[ $dlistwise ]() 		@listwise
+[ $dxunit ]() 				@xunit
+[ $dlibxunit ]()			@libxunit
+[ $dfabcore ]() 			@fabcore

# build artifacts
[ @all ] : [ @final @debug @devel ]
[ @final ] : [ @libxapi.final @libxlinux.final @libpstring.final @liblistwise.final @listwise.final @fabcore.final ]
[ @debug ] : [ @libxapi.debug @libxlinux.debug @libpstring.debug @liblistwise.debug @listwise.debug @fabcore.debug ]
[ @devel ] : [ @libxapi.devel @libxlinux.devel @libpstring.devel @liblistwise.devel @listwise.devel @fabcore.devel ]
[ @man ] : [ @fabcore.man @listwise.man ]

# install libraries
[ @install.base.final ] : [ @libxapi.install.final @libxlinux.install.final @libpstring.install.final @liblistwise.install.final @listwise.install.final ]
[ @install.base.debug ] : [ @libxapi.install.debug @libxlinux.install.debug @libpstring.install.debug @liblistwise.install.debug @listwise.install.debug ]

# install local and dist
[ @install.local.final ] : [ @install.base.final @fabcore.install.local.final ]
[ @install.local.debug ] : [ @install.base.debug  @fabcore.install.local.debug ]
[ @install.dist.final ] : [ @install.base.final @fabcore.install.dist.final ]
[ @install.dist.debug ] : [ @install.base.debug  @fabcore.install.dist.debug ]

# doc
[ @install.man ] : [ @fabcore.install.man @listwise.install.man ]

# unit tests
[ @test ] : [ @xunit.devel @libxunit.devel @liblistwise.test @common.test ]
[ @test.more ] : [ @xunit.devel @libxunit.devel @liblistwise.test.more @common.test.more ]
