# definitions
+[ $*/../../vars.fab ]

# source invocations
+[ $dcommon ]() @common

# variables
$basename			= [ listwise ]
$libname_eapi = [ lib $basename .so ~ j ]
$libname_xapi = [ lib $basename -xapi .so ~ j ]
$cflags				= [ -fPIC
	# include paths
	[ [ [ $dliblistwise ~ ls c ] [ $dliblistwise/test ~ j ls ] ~ -d ] $dlibxapi $dlibxlinux $dlibpstring $dlibxunit ~ s/^/-I ]
]

# cflags variants
$cflags_eapi_final = [ $cflags $cflags_eapi_final [ -DLWOPDIR=$lwopdir ~ j ] [ -DLWOPEXT=$lwopext ~ j ] ]
$cflags_eapi_debug = [ $cflags $cflags_eapi_debug [ -DLWOPDIR=$lwopdir ~ j ] [ -DLWOPEXT=$lwopext ~ j ] ]
$cflags_eapi_devel = [ $cflags $cflags_eapi_devel [ -DLWOPDIR=$lwopdir_devel ~ j ] [ -DLWOPEXT=eapi.devel.so ~ j ] ]
$cflags_xapi_final = [ $cflags $cflags_xapi_final [ -DLWOPDIR=$lwopdir ~ j ] [ -DLWOPEXT=$lwopext ~ j ] ]
$cflags_xapi_debug = [ $cflags $cflags_xapi_debug [ -DLWOPDIR=$lwopdir ~ j ] [ -DLWOPEXT=$lwopext ~ j ] ]
$cflags_xapi_devel = [ $cflags $cflags_xapi_devel [ -DLWOPDIR=$lwopdir_devel ~ j ] [ -DLWOPEXT=xapi.devel.so ~ j ] ]
$cflags_xapi_xunit = [ $cflags $cflags_xapi_xunit ]

# lflags variants
$lflags						 = [ -lpcre -ldl -shared [ -Wl,--version-script=$*/exports ~ j ] ]
$lflags_eapi_final = [ $lflags $lflags_final $libxapi_eapi_final $libxlinux_eapi_final $libpstring_eapi_final [ -Wl,-soname,liblistwise.so ~ j ] ]
$lflags_eapi_debug = [ $lflags $lflags_debug $libxapi_eapi_debug $libxlinux_eapi_debug $libpstring_eapi_debug [ -Wl,-soname,liblistwise.so ~ j ] ]
$lflags_eapi_devel = [ $lflags $lflags_devel $libxapi_eapi_devel $libxlinux_eapi_devel $libpstring_eapi_devel [ -Wl,-soname,liblistwise-devel.so ~ j ] ]
$lflags_xapi_final = [ $lflags $lflags_final $libxapi_xapi_final $libxlinux_xapi_final $libpstring_xapi_final [ -Wl,-soname,liblistwise-xapi.so ~ j ] ]
$lflags_xapi_debug = [ $lflags $lflags_debug $libxapi_xapi_debug $libxlinux_xapi_debug $libpstring_xapi_debug [ -Wl,-soname,liblistwise-xapi.so ~ j ] ]
$lflags_xapi_devel = [ $lflags $lflags_devel $libxapi_xapi_devel $libxlinux_xapi_devel $libpstring_xapi_devel [ -Wl,-soname,liblistwise-xapi-devel.so ~ j ] ]

# source files
+[@std.c]($dext = [ eapi.final.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise ~ ls m/op$ v ]; $cc; $cflags = $cflags_eapi_final)
+[@std.c]($dext = [ eapi.debug.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise ~ ls m/op$ v ]; $cc; $cflags = $cflags_eapi_debug)
+[@std.c]($dext = [ eapi.devel.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise ~ ls m/op$ v ]; $cc; $cflags = $cflags_eapi_devel)
+[@std.l]($dext = [ eapi.final.pic.o ]; $rdirs = $dliblistwise; -$lfabpaths; $cc $flex $flexflags; $cflags = $cflags_eapi_final)
+[@std.l]($dext = [ eapi.debug.pic.o ]; $rdirs = $dliblistwise; -$lfabpaths; $cc $flex $flexflags; $cflags = $cflags_eapi_debug)
+[@std.l]($dext = [ eapi.devel.pic.o ]; $rdirs = $dliblistwise; -$lfabpaths; $cc $flex $flexflags; $cflags = $cflags_eapi_devel)
+[@std.y]($dext = [ eapi.final.pic.o ]; $rdirs = $dliblistwise; $cc $bison $bisonflags; $cflags = $cflags_eapi_final)
+[@std.y]($dext = [ eapi.debug.pic.o ]; $rdirs = $dliblistwise; $cc $bison $bisonflags; $cflags = $cflags_eapi_debug)
+[@std.y]($dext = [ eapi.devel.pic.o ]; $rdirs = $dliblistwise; $cc $bison $bisonflags; $cflags = $cflags_eapi_devel)

+[@std.c]($dext = [ xapi.final.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise ~ ls m/op$ v ]; $cc; $cflags = $cflags_xapi_final)
+[@std.c]($dext = [ xapi.debug.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise ~ ls m/op$ v ]; $cc; $cflags = $cflags_xapi_debug)
+[@std.c]($dext = [ xapi.devel.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise ~ ls m/op$ v ]; $cc; $cflags = $cflags_xapi_devel)
+[@std.l]($dext = [ xapi.final.pic.o ]; $rdirs = $dliblistwise; -$lfabpaths; $cc $flex $flexflags; $cflags = $cflags_xapi_final)
+[@std.l]($dext = [ xapi.debug.pic.o ]; $rdirs = $dliblistwise; -$lfabpaths; $cc $flex $flexflags; $cflags = $cflags_xapi_debug)
+[@std.l]($dext = [ xapi.devel.pic.o ]; $rdirs = $dliblistwise; -$lfabpaths; $cc $flex $flexflags; $cflags = $cflags_xapi_devel)
+[@std.y]($dext = [ xapi.final.pic.o ]; $rdirs = $dliblistwise; $cc $bison $bisonflags; $cflags = $cflags_xapi_final)
+[@std.y]($dext = [ xapi.debug.pic.o ]; $rdirs = $dliblistwise; $cc $bison $bisonflags; $cflags = $cflags_xapi_debug)
+[@std.y]($dext = [ xapi.devel.pic.o ]; $rdirs = $dliblistwise; $cc $bison $bisonflags; $cflags = $cflags_xapi_devel)

# source and test files
+[@std.c]($dext = [ xapi.xunit.pic.o ]; $rdirs = $*; $cc; $cflags = $cflags_xapi_xunit)

# generated files
+[@std.flex.states] ($dext = [ eapi.final.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_eapi_final)
+[@std.flex.states] ($dext = [ eapi.debug.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_eapi_debug)
+[@std.flex.states] ($dext = [ eapi.devel.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_eapi_devel)
+[@std.bison.tokens]($dext = [ eapi.final.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_eapi_final)
+[@std.bison.tokens]($dext = [ eapi.debug.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_eapi_debug)
+[@std.bison.tokens]($dext = [ eapi.devel.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_eapi_devel)
+[@std.xapi.errtab] ($dext = [ eapi.final.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_eapi_final; $fabpaths = [ $dliblistwise/error/PCRE.errtab ~ j ]; $apidata = [1])
+[@std.xapi.errtab] ($dext = [ eapi.debug.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_eapi_debug; $fabpaths = [ $dliblistwise/error/PCRE.errtab ~ j ]; $apidata = [1])
+[@std.xapi.errtab] ($dext = [ eapi.devel.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_eapi_devel; $fabpaths = [ $dliblistwise/error/PCRE.errtab ~ j ]; $apidata = [1])
+[@std.flex.states] ($dext = [ xapi.final.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_xapi_final)
+[@std.flex.states] ($dext = [ xapi.debug.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_xapi_debug)
+[@std.flex.states] ($dext = [ xapi.devel.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_xapi_devel)
+[@std.bison.tokens]($dext = [ xapi.final.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_xapi_final)
+[@std.bison.tokens]($dext = [ xapi.debug.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_xapi_debug)
+[@std.bison.tokens]($dext = [ xapi.devel.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_xapi_devel)
+[@std.xapi.errtab] ($dext = [ xapi.final.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_xapi_final; $fabpaths = [ $dliblistwise/error/PCRE.errtab ~ j ]; $apidata = [1])
+[@std.xapi.errtab] ($dext = [ xapi.debug.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_xapi_debug; $fabpaths = [ $dliblistwise/error/PCRE.errtab ~ j ]; $apidata = [1])
+[@std.xapi.errtab] ($dext = [ xapi.devel.pic.o ]; $rdirs = $dliblistwise; $cc; $cflags = $cflags_xapi_devel; $fabpaths = [ $dliblistwise/error/PCRE.errtab ~ j ]; $apidata = [1])

$oplist_eapi_final = [ $dliblistwise ~ ??, s,$,/op lsr l,/test.c v sxf,c,eapi.final.so sy ]
$oplist_eapi_debug = [ $dliblistwise ~ ??, s,$,/op lsr l,/test.c v sxf,c,eapi.debug.so sy ]
$oplist_eapi_devel = [ $dliblistwise ~ ??, s,$,/op lsr l,/test.c v sxf,c,eapi.devel.so sy ]
$oplist_xapi_final = [ $dliblistwise ~ ??, s,$,/op lsr l,/test.c v sxf,c,xapi.final.so sy ]
$oplist_xapi_debug = [ $dliblistwise ~ ??, s,$,/op lsr l,/test.c v sxf,c,xapi.debug.so sy ]
$oplist_xapi_devel = [ $dliblistwise ~ ??, s,$,/op lsr l,/test.c v sxf,c,xapi.devel.so sy ]

# build library and all operators
[ @all ] : [ @all.eapi @all.xapi ]
[ @all.eapi ] : [ @final.eapi @debug.eapi @devel.eapi ]
[ @all.xapi ] : [ @final.xapi @debug.xapi @devel.xapi ]
[ @final ] : [ @final.eapi @final.xapi ]
[ @final.eapi ] : [ $liblistwise_eapi_final $oplist_eapi_final ]
[ @final.xapi ] : [ $liblistwise_xapi_final $oplist_xapi_final ]
[ @debug ] : [ @debug.eapi @debug.xapi ]
[ @debug.eapi ] : [ $liblistwise_eapi_debug $oplist_eapi_debug ]
[ @debug.xapi ] : [ $liblistwise_xapi_debug $oplist_xapi_debug ]
[ @devel ] : [ @devel.eapi @devel.xapi ]
[ @devel.eapi ] : [ $liblistwise_eapi_devel $oplist_eapi_devel ]
[ @devel.xapi ] : [ $liblistwise_xapi_devel $oplist_xapi_devel ]

# builtin liblistwise operators
+[@std.c]($dext = [ eapi.final.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise/op ~ j ]; $cc; $cflags = $cflags_eapi_final; -$cobjpaths)
[ $cobjpaths ] :^ [ $liblistwise_eapi_final ]
+[@std.c]($dext = [ eapi.debug.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise/op ~ j ]; $cc; $cflags = $cflags_eapi_debug; -$cobjpaths)
[ $cobjpaths ] :^ [ $liblistwise_eapi_debug ]
+[@std.c]($dext = [ eapi.devel.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise/op ~ j ]; $cc; $cflags = $cflags_eapi_devel; -$cobjpaths)
[ $cobjpaths ] :^ [ $liblistwise_eapi_devel ]
+[@std.c]($dext = [ xapi.final.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise/op ~ j ]; $cc; $cflags = $cflags_xapi_final; -$cobjpaths)
[ $cobjpaths ] :^ [ $liblistwise_xapi_final ]
+[@std.c]($dext = [ xapi.debug.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise/op ~ j ]; $cc; $cflags = $cflags_xapi_debug; -$cobjpaths)
[ $cobjpaths ] :^ [ $liblistwise_xapi_debug ]
+[@std.c]($dext = [ xapi.devel.pic.o ]; $filter = [ ~ ?{ cons{?, l,/test.c v} ]; $rdirs = [ $dliblistwise/op ~ j ]; $cc; $cflags = $cflags_xapi_devel; -$cobjpaths)
[ $cobjpaths ] :^ [ $liblistwise_xapi_devel ]

$dlistwise_test = [ $*/test/listwise_test ~ j ]
$listwise_test_entry = [ $dlistwise_test/listwise_test_entry.xapi.xunit.so ~ j ]

# listwise_test_entry contains the implementation of test_entry for listwise_test that liblistwise xunit tests use
[ $listwise_test_entry ] : [ $dlistwise_test/listwise_test_entry.xapi.xunit.pic.o ~ j ]
{
	[ $cc ] [ $cflags_xapi_xunit ~ uu fi ] [ $dlistwise_test/listwise_test_entry.xapi.xunit.pic.o ~ j ] [ $liblistwise_xapi_devel ] -shared -o [ $@ ]
}

# listwise_test_entry makes liblistwise calls to format test output
[ $listwise_test_entry ] :^ [ $liblistwise_xapi_devel ]

# xunit tests
+[$xunit_tests]($rdirs = $*; $util_objects = $listwise_test_entry; -$xunit_sos)
[ $xunit_sos ] :^ [ $listwise_test_entry ]

##
## formulas
##

# library exports
[ $*/exports ~ j ] : [ $* ~ lsr lx/c ]
{
	  (echo "{ global: "
	> perl -ne 'if(/API(?:DATA)?.*? ([a-zA-Z_][a-zA-Z0-9_]+) *(?:\(|=)/) { print "$1;\n" }' <(\
	  cat -- [ $@ ~ rx/ineed fi ] )
	> echo "local: *; };"
	 ) 1>[ $@ ]
}

# link the library
[ $liblistwise_eapi_final ] : [ [ $*/exports ~ j ] [ $* ~ ls m/op$ o l/test v lsr sx/c/eapi.final.pic.o sy ] ]
{
	[ [ $cc ] [ $cflags_eapi_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o uu fi ] [ $lflags_eapi_final ~ fi ] ~ ?{ j{ } s{ }{\s\x5c\n}{g} ]
}

[ $liblistwise_eapi_debug ] : [ [ $*/exports ~ j ] [ $* ~ ls m/op$ o l/test v lsr sx/c/eapi.debug.pic.o sy ] ]
{
	[ [ $cc ] [ $cflags_eapi_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o uu fi ] [ $lflags_eapi_debug ~ fi ] ~ ?{ j{ } s{ }{\s\x5c\n}{g} ]
}

[ $liblistwise_eapi_devel ] : [ [ $*/exports ~ j ] [ $* ~ ls m/op$ o l/test v lsr sx/c/eapi.devel.pic.o sy ] ]
{
	[ [ $cc ] [ $cflags_eapi_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o uu fi ] [ $lflags_eapi_devel ~ fi ] ~ ?{ j{ } s{ }{\s\x5c\n}{g} ]
}

[ $liblistwise_xapi_final ] : [ [ $*/exports ~ j ] [ $* ~ ls m/op$ o l/test v lsr sx/c/xapi.final.pic.o sy ] ]
{
	[ [ $cc ] [ $cflags_xapi_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o uu fi ] [ $lflags_xapi_final ~ fi ] ~ ?{ j{ } s{ }{\s\x5c\n}{g} ]
}

[ $liblistwise_xapi_debug ] : [ [ $*/exports ~ j ] [ $* ~ ls m/op$ o l/test v lsr sx/c/xapi.debug.pic.o sy ] ]
{
	[ [ $cc ] [ $cflags_xapi_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o uu fi ] [ $lflags_xapi_debug ~ fi ] ~ ?{ j{ } s{ }{\s\x5c\n}{g} ]
}

[ $liblistwise_xapi_devel ] : [ [ $*/exports ~ j ] [ $* ~ ls m/op$ o l/test v lsr sx/c/xapi.devel.pic.o sy ] ]
{
	[ [ $cc ] [ $cflags_xapi_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o uu fi ] [ $lflags_xapi_devel ~ fi ] ~ ?{ j{ } s{ }{\s\x5c\n}{g} ]
}

[ $liblistwise_eapi_final ] :^ [ $libxapi_eapi_final $libxlinux_eapi_final $libpstring_eapi_final ]
[ $liblistwise_eapi_debug ] :^ [ $libxapi_eapi_debug $libxlinux_eapi_debug $libpstring_eapi_debug ]
[ $liblistwise_eapi_devel ] :^ [ $libxapi_eapi_devel $libxlinux_eapi_devel $libpstring_eapi_devel ]
[ $liblistwise_xapi_final ] :^ [ $libxapi_xapi_final $libxlinux_xapi_final $libpstring_xapi_final ]
[ $liblistwise_xapi_debug ] :^ [ $libxapi_xapi_debug $libxlinux_xapi_debug $libpstring_xapi_debug ]
[ $liblistwise_xapi_devel ] :^ [ $libxapi_xapi_devel $libxlinux_xapi_devel $libpstring_xapi_devel ]

# link an operator so - which depends on its own .o
[ $oplist_eapi_final ~ dj shift ] :: [ $< ~ rx sxf/eapi.final.pic.o ]
{
	[ $cc ] [ $cflags_eapi_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o l/common o l/op uu fi ] [ $liblistwise_eapi_final ] -shared
}

[ $oplist_eapi_debug ~ dj shift ] :: [ $< ~ rx sxf/eapi.debug.pic.o ]
{
	[ $cc ] [ $cflags_eapi_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o l/common o l/op uu fi ] [ $liblistwise_eapi_debug ] -shared
}

[ $oplist_eapi_devel ~ dj shift ] :: [ $< ~ rx sxf/eapi.devel.pic.o ]
{
	[ $cc ] [ $cflags_eapi_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o l/common o l/op uu fi ] [ $liblistwise_eapi_devel ] -shared
}

[ $oplist_xapi_final ~ dj shift ] :: [ $< ~ rx sxf/xapi.final.pic.o ]
{
	[ $cc ] [ $cflags_xapi_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o l/common o l/op uu fi ] [ $liblistwise_xapi_final ] -shared
}

[ $oplist_xapi_debug ~ dj shift ] :: [ $< ~ rx sxf/xapi.debug.pic.o ]
{
	[ $cc ] [ $cflags_xapi_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o l/common o l/op uu fi ] [ $liblistwise_xapi_debug ] -shared
}

[ $oplist_xapi_devel ~ dj shift ] :: [ $< ~ rx sxf/xapi.devel.pic.o ]
{
	[ $cc ] [ $cflags_xapi_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o l/common o l/op uu fi ] [ $liblistwise_xapi_devel ] -shared
}

# operators also depend on the library for linking
[ $oplist_eapi_final ] :^ [ $liblistwise_eapi_final ]
[ $oplist_eapi_debug ] :^ [ $liblistwise_eapi_debug ]
[ $oplist_eapi_devel ] :^ [ $liblistwise_eapi_devel ]
[ $oplist_xapi_final ] :^ [ $liblistwise_xapi_final ]
[ $oplist_xapi_debug ] :^ [ $liblistwise_xapi_debug ]
[ $oplist_xapi_devel ] :^ [ $liblistwise_xapi_devel ]

# PCRE errtab is generated from their header file
[ $dliblistwise/error/PCRE.errtab ~ j ]
{
	exec 1>[ $@ ]
	> sed -e 's/#define \(PCRE_ERROR_[A-Z_]\+\) \+(\([-0-9]\+\)).*/\2\t\1/p; d' <\
	`pcre-config --prefix`/include/pcre.h
}

