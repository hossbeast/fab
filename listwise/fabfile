# directories
$dcommon				= [ $*/../common ~ j ]
$dlistwise    	= [ $* ]

# variable defs, $cc, $cflags, etc
# common targets xmem, map, etc
+[ $dcommon/vars.fab ]
+[ $dcommon ]() @common

# include paths
$dliblistwise		= [ $dlistwise/../liblistwise ~j ]

# libraries to link
$liblistwise		= [ -llistwise ]

# variables
$cflags					= [ $cflags  [ $dlistwise $dliblistwise ~ s/^/-I ]
	[ -DFABVERSIONS="\""$VERSIONS"\"" ~ j ]
	[ -DFABVERSIONN="\""$VERSIONN"\"" ~ j ]
]
$lflags					= [ $lflags $liblistwise ]
$name						= [ listwise ]
$link						= [ lw ]
$listwise				= [ $dlistwise/$name ~ j ]

# c files
+[@std.c]($gendir = $dlistwise; $dirs = $dlistwise; $cc $cflags)

# catchall node
[ @all ] : [ $listwise ]

#
# formulas
#
[ $listwise ] : [ $dlistwise/main.o ~ j ]
{
	[ $cc ] [ $cflags ~ ss/u/fi ] -o [ $@ ] [ $@ ~ rx/aneedw/rx/xm/<o>/uu/fi ] [ $lflags ~ fi ]
}

#
# tasks
#

[ @install ] : [ $listwise ]
{
	install -d										[ $destdir/$bindir ]
	install [ $listwise ]					[ $destdir/$bindir/$name ]
	ln -vfs [ $name ]							[ $destdir/$bindir/$link ]
}

[ @uninstall ]
{
	rm -f													[ $destdir/$bindir/$listwise ]
	rm -f													[ $destdir/$bindir/$link ]
}

[ @clean ]
{
	rm -f [ $dlistwise/*.o ]			2>/dev/null
	rm -f [ $dlistwise/$name ]		2>/dev/null
	rm -f [ $dlistwise/$link ]		2>/dev/null
}
