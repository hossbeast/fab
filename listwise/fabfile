# definitions
$dcommon				= [ $*/../common ~ j ]
+[ $dcommon/vars.fab ]

# source invocations
+[ $dcommon ]() @common

# variables
$cflags					= [ $cflags -fno-builtin-log [ $dlistwise ~ lsr c -d s/^/-I ]
	[ -DFABVERSIONS="\""$VERSIONS"\"" ~ j ]
	[ -DFABVERSIONN="\""$VERSIONN"\"" ~ j ]
	[ ~ ?{ cons{-DBUILDSTAMP="`date`"} ]

	# include paths - mark as system to preclude dependency discovery from gcc
	[ $dlibxapi $dlibxlinux $dliblistwise $dlibpstring ~ s/^/-isystem ]
]
$lflags					= [ $lflags $libpstring $liblistwise $libxapi $libxlinux ]
$name						= [ listwise ]
$link						= [ lw ]
$listwise				= [ $dlistwise/$name ~ j ]

# c files
+[@std.c]($gendir = $dlistwise; $rdirs = $dlistwise; $cc $cflags)

# errtab
+[@std.xapi.errtab]($gendir = $dlistwise; $rdirs = $dlistwise; $cc $cflags)

# catchall node
[ @all ] : [ $listwise ]

#
# formulas
#
[ $listwise ] : [ $dlistwise/main.o ~ j ]
{
	[ $cc ] [ $cflags ~ ss u fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags ~ fi ]
}

#
# tasks
#

[ @install ] : [ $listwise ]
{
	install -d										[ $destdir/$bindir ]
	install [ $listwise ]					[ $destdir/$bindir/$name ]
	ln -vfs [ $name ]							[ $destdir/$bindir/$link ]
}

[ @installman ] : [ @installman1 ]
[ @installman1 ] : [ $dlistwise/man/listwise.1 ~ j ]
{
	install -d 																					[ $destdir/$mandir/man1 ]

	cat [ $dlistwise/man/listwise.1 ] \
		| lw "s/---BUILDVERS---/<[ $VERSIONS ]>" \
		| lw "s/---BUILDDATE---/<[ @^.time ~ datef/%Y-%m-%d ]>" \
		| gzip -9c  																		> [ $destdir/$mandir/man1/listwise.1.gz ]

	ln -fs listwise.1.gz																[ $destdir/$mandir/man1/lw.1.gz ]
}
