# definitions
+[ $*/../../vars.fab ]

# source invocations
+[ $dcommon ]() @common

# variables
$copts = [ -fno-builtin-log [ $dlistwise ~ lsr c -d s/^/-I ]
	[ -DFABVERSIONS="\""$VERSIONS"\"" ~ j ]
	[ -DFABVERSIONN="\""$VERSIONN"\"" ~ j ]

	# include paths - mark as system to preclude dependency discovery from gcc
	[ $dlibxapi $dlibxlinux $dliblistwise $dlibpstring ~ s/^/-I ]
]
$cflags_final = [ $cflags_final $copts ]
$cflags_debug = [ $cflags_debug $copts ]
$cflags_devel = [ $cflags_devel $copts ]

$rpath = [ 
	[ $dlibxapi $dlibxlinux $dlibxunit $dlibpstring $dliblistwise ~ [ ?{ [ rb{$*} ~ j ] "s{^}{'-Wl,-rpath,$ORIGIN/}" "s{$}{'}" ~ fi ] ]
]
$lflags_final = [ $lflags_final $lopts $libxapi_final $libxlinux_final $libpstring_final $liblistwise_final ]
$lflags_debug = [ $lflags_debug $lopts $libxapi_debug $libxlinux_debug $libpstring_debug $liblistwise_debug ]
$lflags_devel = [ $lflags_devel $lopts $libxapi_devel $libxlinux_devel $libpstring_devel $liblistwise_devel $rpath ]

# c files
+[@std.c]($dext = [ final.o ]; $rdirs = $dlistwise; $cc; $cflags = $cflags_final)
+[@std.c]($dext = [ debug.o ]; $rdirs = $dlistwise; $cc; $cflags = $cflags_debug)
+[@std.c]($dext = [ devel.o ]; $rdirs = $dlistwise; $cc; $cflags = $cflags_devel)

# errtab
+[@std.xapi.errtab]($dext = [ final.o ]; $rdirs = $dlistwise; $cc; $cflags = $cflags_final)
+[@std.xapi.errtab]($dext = [ debug.o ]; $rdirs = $dlistwise; $cc; $cflags = $cflags_debug)
+[@std.xapi.errtab]($dext = [ devel.o ]; $rdirs = $dlistwise; $cc; $cflags = $cflags_devel)

# tests
[ @all ] : [ @final @debug @devel ]
[ @final ] : [ $listwise_final ]
[ @debug ] : [ $listwise_debug ]
[ @devel ] : [ $listwise_devel ]

#
# formulas
#

[ $listwise_final ] : [ $dlistwise/main.final.o ~ j ]
{
	[ $cc ] [ $cflags_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_final ~ fi ]
}

[ $listwise_debug ] : [ $dlistwise/main.debug.o ~ j ]
{
	[ $cc ] [ $cflags_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_debug ~ fi ]
}

[ $listwise_devel ] : [ $dlistwise/main.devel.o ~ j ]
{
	[ $cc ] [ $cflags_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_devel ~ fi ]
}

[ $listwise_final ] :^ [ $libxapi_final $libxlinux_final $libpstring_final $liblistwise_final ]
[ $listwise_debug ] :^ [ $libxapi_debug $libxlinux_debug $libpstring_debug $liblistwise_debug ]
[ $listwise_devel ] :^ [ $libxapi_devel $libxlinux_devel $libpstring_devel $liblistwise_devel ]

#
# tasks
#

[ @install.final ] : [ $listwise_final ]
{
	install -d										[ $destdir/$bindir ]
	install [ $listwise_final ]		[ $destdir/$bindir/listwise ]
	ln -vfs [ listwise ]					[ $destdir/$bindir/lw ]
}

[ @install.debug ] : [ $listwise_debug ]
{
	install -d										[ $destdir/$bindir ]
	install [ $listwise_debug ]		[ $destdir/$bindir/listwise ]
	ln -vfs [ listwise ]					[ $destdir/$bindir/lw ]
}

[ @install.man ] : [ @install.man1 ]

# build the man gz
[ @man ] : [ $dlistwise/man/listwise.1.gz ~ j ]
[ $dlistwise/man/listwise.1.gz ~ j ] : [ $dlistwise/man/listwise.1 ~ j ]
{
	cat [ $dlistwise/man/listwise.1 ] [
	] | sed -e 's/---BUILDVERS---/[ $VERSIONS ]/' [
	] | sed -e 's/---BUILDDATE---/[ $^starttime ~ datef/%Y-%m-%d ]/' [
	] | gzip -9c > [ $@ ]
}


# install the man gz
[ @install.man1 ] : [ $dlistwise/man/listwise.1.gz ~ j ]
{
	install -d 																		[ $destdir/$mandir/man1 ]
	install [ $dlistwise/man/listwise.1.gz ]			[ $destdir/$mandir/man1/listwise.1.gz ]
	ln -fs listwise.1.gz													[ $destdir/$mandir/man1/lw.1.gz ]
}
