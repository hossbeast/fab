# definitions
+[ $*/../../vars.fab ]

# source invocations
+[ $dcommon ]() @common
+[ $dfabcore/common/common.fab ]() @fabcommon

# variables
$sdirs = [ $dfabd ~ lsr c -d ]
$copts = [ -fno-builtin-log [ $sdirs ~ s/^/-I ]
	[ -DFABVERSIONS="\""$VERSIONS"\"" ~ j ]
	[ -DFABVERSIONN="\""$VERSIONN"\"" ~ j ]

	# include paths
	[ [ $dfabcore/common ~ j lsr c -d ] $dlibxapi $dlibxlinux $dliblistwise $dlibpstring ~ s/^/-I ]
]

$params = [
	[ -DFABLWOPDIR="\""$fablwopdir"\"" ~ j ]
	[ -DFABINVOKEDIR="\""$fabinvokedir"\"" ~ j ]
	[ -DFABTMPDIR="\""$fabtmpdir"\"" ~ j ]
	[ -DFABIPCDIR="\""$fabipcdir"\"" ~ j ]
]

$params_devel = [
	[ -DFABLWOPDIR="\""$fablwopdir_devel"\"" ~ j ]
	[ -DFABINVOKEDIR="\""$fabinvokedir_devel"\"" ~ j ]
	[ -DFABTMPDIR="\""$fabtmpdir_devel"\"" ~ j ]
	[ -DFABIPCDIR="\""$fabipcdir_devel"\"" ~ j ]
]

$cflags_xapi_final = [ $cflags_xapi_final $copts $params ]
$cflags_xapi_debug = [ $cflags_xapi_debug $copts $params ]
$cflags_xapi_devel = [ $cflags_xapi_devel $copts $params_devel ]

$rpath = [ 
	[ $dlibxapi $dlibxlinux $dlibxunit $dlibpstring $dliblistwise ~ [ ?{ [ rb{$*} ~ j ] "s{^}{'-Wl,-rpath,$ORIGIN/}" "s{$}{'}" ~ fi ] ]
]
# -lrt required for glibc < 2.17 as per man clock_gettime
$lopts						 = [ -lrt ]
$lflags_xapi_final = [ $lflags_xapi_final $lopts $libxapi_xapi_final $libxlinux_xapi_final $libpstring_xapi_final $liblistwise_xapi_final ]
$lflags_xapi_debug = [ $lflags_xapi_debug $lopts $libxapi_xapi_debug $libxlinux_xapi_debug $libpstring_xapi_debug $liblistwise_xapi_debug ]
$lflags_xapi_devel = [ $lflags_xapi_devel $lopts $libxapi_xapi_devel $libxlinux_xapi_devel $libpstring_xapi_devel $liblistwise_xapi_devel $rpath ]

# standard files - standard compilation
+[@std.c]($dext = [ xapi.final.o ]; $dirs = $sdirs; $paths = [ $dfabd/main.c ~ j ]; $cc; $cflags = $cflags_xapi_final)
+[@std.c]($dext = [ xapi.debug.o ]; $dirs = $sdirs; $paths = [ $dfabd/main.c ~ j ]; $cc; $cflags = $cflags_xapi_debug)
+[@std.c]($dext = [ xapi.devel.o ]; $dirs = $sdirs; $paths = [ $dfabd/main.c ~ j ]; $cc; $cflags = $cflags_xapi_devel)

+[@std.l]($dext = [ xapi.final.o ]; $dirs = $sdirs; $cc $flex $flexflags; $cflags = $cflags_xapi_final)
+[@std.l]($dext = [ xapi.debug.o ]; $dirs = $sdirs; $cc $flex $flexflags; $cflags = $cflags_xapi_debug)
+[@std.l]($dext = [ xapi.devel.o ]; $dirs = $sdirs; $cc $flex $flexflags; $cflags = $cflags_xapi_devel)

+[@std.y]($dext = [ xapi.final.o ]; $dirs = $sdirs; $cc $bison $bisonflags; $cflags = $cflags_xapi_final)
+[@std.y]($dext = [ xapi.debug.o ]; $dirs = $sdirs; $cc $bison $bisonflags; $cflags = $cflags_xapi_debug)
+[@std.y]($dext = [ xapi.devel.o ]; $dirs = $sdirs; $cc $bison $bisonflags; $cflags = $cflags_xapi_devel)

# generated files
+[@std.flex.states] ($dext = [ xapi.final.o ]; $dirs = $sdirs; $cc; $cflags = $cflags_xapi_final)
+[@std.flex.states] ($dext = [ xapi.debug.o ]; $dirs = $sdirs; $cc; $cflags = $cflags_xapi_debug)
+[@std.flex.states] ($dext = [ xapi.devel.o ]; $dirs = $sdirs; $cc; $cflags = $cflags_xapi_devel)
+[@std.bison.tokens]($dext = [ xapi.final.o ]; $dirs = $sdirs; $cc; $cflags = $cflags_xapi_final)
+[@std.bison.tokens]($dext = [ xapi.debug.o ]; $dirs = $sdirs; $cc; $cflags = $cflags_xapi_debug)
+[@std.bison.tokens]($dext = [ xapi.devel.o ]; $dirs = $sdirs; $cc; $cflags = $cflags_xapi_devel)

#
# catchall node
#
[ @all ] : [ @final @debug @devel ]
[ @final ] : [ $fabd_final ]
[ @debug ] : [ $fabd_debug ]
[ @devel ] : [ $fabd_devel ]

#
# executables
#  -export-dynamic enables dloaded code (in particular, the fab-specific operator so's) to bind to symbols in the executable.
#
[ $fabd_final ] :^ [ $libxapi_xapi_final $libxlinux_xapi_final $libpstring_xapi_final $liblistwise_xapi_final ]
[ $fabd_debug ] :^ [ $libxapi_xapi_debug $libxlinux_xapi_debug $libpstring_xapi_debug $liblistwise_xapi_debug ]
[ $fabd_devel ] :^ [ $libxapi_xapi_devel $libxlinux_xapi_devel $libpstring_xapi_devel $liblistwise_xapi_devel ]

[ $fabd_final ] : [ $dfabd/main.xapi.final.o ~ j ] 
{
	[ $cc ] [ $cflags_xapi_final -export-dynamic ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_xapi_final ~ fi ]
}

[ $fabd_debug ] : [ $dfabd/main.xapi.debug.o ~ j ] 
{
	[ $cc ] [ $cflags_xapi_debug -export-dynamic ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_xapi_debug ~ fi ]
}

[ $fabd_devel ] : [ $dfabd/main.xapi.devel.o ~ j ] 
{
	[ $cc ] [ $cflags_xapi_devel -export-dynamic ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_xapi_devel ~ fi ]
}

#
# tasks
#

# base install
[ @install.base.final ] : [ @final ]
{
	install -d																			[ $destdir/$bindir ]
	rm																							[ $destdir/$bindir/fabd ] 2>/dev/null
	install [ $fabd_final ]													[ $destdir/$bindir/fabd ]
}

# dist install meant for packagers - it does not include file ownership/permissions
# which would be supplied by the deb/rpm/etc
[ @install.dist.final ] : [ @install.base.final ]

# local install
[ @install.local.final ] : [ @install.base.final ]
{
	chown fabsys:fabsys															[ $destdir/$bindir/fabd ]
	chmod ug+s																			[ $destdir/$bindir/fabd ]
}

[ @install.base.debug ] : [ @debug ]
{
	install -d																			[ $destdir/$bindir ]
	rm																							[ $destdir/$bindir/fabd ] 2>/dev/null
	install [ $fabd_debug ]													[ $destdir/$bindir/fabd ]
}

[ @install.dist.debug ] : [ @install.base.debug ]
[ @install.local.debug ] : [ @install.base.debug ]
