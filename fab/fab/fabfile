# definitions
+[ $*/../../vars.fab ]

# source invocations
+[ $dcommon ]() @common
+[ $dfabcore/common/common.fab ~ j ]() @fabcommon

# variables
$sdirs = [ $dfab ~ lsr c -d ]
$copts = [ -fno-builtin-log [ $sdirs ~ s/^/-I ]
	[ -DFABVERSIONS="\""$VERSIONS"\"" ~ j ]
	[ -DFABVERSIONN="\""$VERSIONN"\"" ~ j ]

	# include paths - mark as system to preclude dependency discovery from gcc
	[ [ $dfabcore/common ~ j lsr c -d ] $dlibxapi $dlibxlinux $dlibpstring $dlibnarrate ~ s/^/-I ]
]

$params = [
	[ -DFABLWOPDIR="\""$fablwopdir"\"" ~ j ]
	[ -DFABINVOKEDIR="\""$fabinvokedir"\"" ~ j ]
	[ -DFABTMPDIR="\""$fabtmpdir"\"" ~ j ]
	[ -DFABIPCDIR="\""$fabipcdir"\"" ~ j ]
]

$params_devel = [
	[ -DFABLWOPDIR="\""$fablwopdir_devel"\"" ~ j ]
	[ -DFABINVOKEDIR="\""$fabinvokedir_devel"\"" ~ j ]
	[ -DFABTMPDIR="\""$fabtmpdir_devel"\"" ~ j ]
	[ -DFABIPCDIR="\""$fabipcdir_devel"\"" ~ j ]
]

$cflags_xapi_final = [ $cflags_xapi_final $copts $params ]
$cflags_xapi_debug = [ $cflags_xapi_debug $copts $params ]
$cflags_xapi_devel = [ $cflags_xapi_devel $copts $params_devel ]

$rpath = [ 
	[ $dlibxapi $dlibxlinux $dlibxunit $dlibpstring $dlibnarrate $dliblistwise ~ [ ?{ [ rb{$*} ~ j ] "s{^}{'-Wl,-rpath,$ORIGIN/}" "s{$}{'}" ~ fi ] ]
]
# -lrt required for glibc < 2.17 as per man clock_gettime
$lopts						 = [ -lrt ]
$lflags_xapi_final = [ $lflags_xapi_final $lopts $libxapi_xapi_final $libxlinux_xapi_final $libpstring_xapi_final $libnarrate_xapi_final $liblistwise_xapi_final ]
$lflags_xapi_debug = [ $lflags_xapi_debug $lopts $libxapi_xapi_debug $libxlinux_xapi_debug $libpstring_xapi_debug $libnarrate_xapi_debug $liblistwise_xapi_debug ]
$lflags_xapi_devel = [ $lflags_xapi_devel $lopts $libxapi_xapi_devel $libxlinux_xapi_devel $libpstring_xapi_devel $libnarrate_xapi_devel $liblistwise_xapi_devel $rpath ]

# standard files - standard nopic compilation
+[@std.c]($dext = [ xapi.final.o ]; $rdirs = $sdirs; $cc; $cflags = $cflags_xapi_final)
+[@std.c]($dext = [ xapi.debug.o ]; $rdirs = $sdirs; $cc; $cflags = $cflags_xapi_debug)
+[@std.c]($dext = [ xapi.devel.o ]; $rdirs = $sdirs; $cc; $cflags = $cflags_xapi_devel)

#
# catchall node
#
[ @final ] : [ $fab_final ]
[ @debug ] : [ $fab_debug ]
[ @devel ] : [ $fab_devel ]

#
# executables
#  -export-dynamic enables dloaded code (in particular, the fab-specific operator so's) to bind to symbols in the executable.
#
[ $fab_final ] :^ [ $libxapi_xapi_final $libxlinux_xapi_final $libpstring_xapi_final $libnarrate_xapi_final $liblistwise_xapi_final ]
[ $fab_debug ] :^ [ $libxapi_xapi_debug $libxlinux_xapi_debug $libpstring_xapi_debug $libnarrate_xapi_debug $liblistwise_xapi_debug ]
[ $fab_devel ] :^ [ $libxapi_xapi_devel $libxlinux_xapi_devel $libpstring_xapi_devel $libnarrate_xapi_devel $liblistwise_xapi_devel ]

[ $fab_final ] : [ $dfab/main.xapi.final.o ~ j ] 
{
	[ $cc ] [ $cflags_xapi_final -export-dynamic ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_xapi_final ~ fi ]
}

[ $fab_debug ] : [ $dfab/main.xapi.debug.o ~ j ] 
{
	[ $cc ] [ $cflags_xapi_debug -export-dynamic ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_xapi_debug ~ fi ]
}

[ $fab_devel ] : [ $dfab/main.xapi.devel.o ~ j ] 
{
	[ $cc ] [ $cflags_xapi_devel -export-dynamic ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_xapi_devel ~ fi ]
}

#
# tasks
#

[ @install.base.final ] : [ @final ]
{
	install -d																			[ $destdir/$bindir ]
	rm																							[ $destdir/$bindir/fab ] 2>/dev/null
	install [ $fab_final ]													[ $destdir/$bindir/fab ]
}

[ @install.dist.final ] : [ @install.base.final ]
[ @install.local.final ] : [ @install.base.final ]
{
	chown fabsys:fabsys															[ $destdir/$bindir/fab ]
	chmod ug+s																			[ $destdir/$bindir/fab ]
}

[ @install.base.debug ] : [ @debug ]
{
	install -d																			[ $destdir/$bindir ]
	rm																							[ $destdir/$bindir/fab ] 2>/dev/null
	install [ $fab_debug ]													[ $destdir/$bindir/fab ]
}

[ @install.dist.debug ] : [ @install.base.debug ]
[ @install.local.debug ] : [ @install.base.debug ]
