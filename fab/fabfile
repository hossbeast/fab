# definitions
+[ $*/../vars.fab ]

# source invocations
+[ $dcommon ]() @common

# variables
$copts = [ -fno-builtin-log [ $dfab ~ lsr c -d s/^/-I ]

	[ -DFABVERSIONS="\""$VERSIONS"\"" ~ j ]
	[ -DFABVERSIONN="\""$VERSIONN"\"" ~ j ]
	[ -DFABCACHEDIR="\""$fabcachedir"\"" ~ j ]
	[ -DFABTMPDIR="\""$fabtmpdir"\"" ~ j ]

	# include paths - mark as system to preclude dependency discovery from gcc
	[ $dlibxapi $dlibxlinux $dliblistwise $dlibpstring ~ s/^/-isystem ]
]

$cflags_final = [ $cflags_devel $copts [ -DFABLWOPDIR="\""$fablwopdir"\"" ~ j ] [ -DFABINVOKEDIR="\""$fabinvokedir"\"" ~ j ] ]
$cflags_debug = [ $cflags_devel $copts [ -DFABLWOPDIR="\""$fablwopdir"\"" ~ j ] [ -DFABINVOKEDIR="\""$fabinvokedir"\"" ~ j ] ]
$cflags_devel = [ $cflags_devel $copts [ -DFABLWOPDIR="\""$fablwopdir_devel"\"" ~ j ] [ -DFABINVOKEDIR="\""$fabinvokedir_devel"\"" ~ j ] ]

$lopts = [ $libxapi $libxlinux $libpstring $liblistwise ]
$lflags_debug $lflags_devel = [
	[ ~ ?( cons(-Wl,-rpath,${ORIGIN}/../libxapi) ]
	[ ~ ?( cons(-Wl,-rpath,${ORIGIN}/../libxlinux) ]
	[ ~ ?( cons(-Wl,-rpath,${ORIGIN}/../libpstring) ]
	[ ~ ?( cons(-Wl,-rpath,${ORIGIN}/../listwise/liblistwise) ]
]

# standard files - standard compilation
+[@std.c]($dext = [ final.o ]; $gendir = $dfab; $rdirs = [ $dfab ~ ls -d v d m/fablw d ]; $paths = [ $dfab/main.c ~ j ]; $cc; $cflags = [ $cflags_final $copts ])
+[@std.c]($dext = [ debug.o ]; $gendir = $dfab; $rdirs = [ $dfab ~ ls -d v d m/fablw d ]; $paths = [ $dfab/main.c ~ j ]; $cc; $cflags = [ $cflags_debug $copts ])
+[@std.c]($dext = [ devel.o ]; $gendir = $dfab; $rdirs = [ $dfab ~ ls -d v d m/fablw d ]; $paths = [ $dfab/main.c ~ j ]; $cc; $cflags = [ $cflags_devel $copts ])

+[@std.l]($dext = [ final.o ]; $gendir = $dfab; $rdirs = [ $dfab ~ ls -d v d m/fablw d ]; $cc $flex $flexflags; $cflags = [ $cflags_final $copts])
+[@std.l]($dext = [ debug.o ]; $gendir = $dfab; $rdirs = [ $dfab ~ ls -d v d m/fablw d ]; $cc $flex $flexflags; $cflags = [ $cflags_debug $copts])
+[@std.l]($dext = [ devel.o ]; $gendir = $dfab; $rdirs = [ $dfab ~ ls -d v d m/fablw d ]; $cc $flex $flexflags; $cflags = [ $cflags_devel $copts])

+[@std.bison.rules]($dext = [ final.o ]; $gendir = $dfab; $dirs = [ $dfab/ff ~ j ]; $cc $bison $bisonflags; $cflags = [ $cflags_final $copts])
+[@std.bison.rules]($dext = [ debug.o ]; $gendir = $dfab; $dirs = [ $dfab/ff ~ j ]; $cc $bison $bisonflags; $cflags = [ $cflags_debug $copts])
+[@std.bison.rules]($dext = [ devel.o ]; $gendir = $dfab; $dirs = [ $dfab/ff ~ j ]; $cc $bison $bisonflags; $cflags = [ $cflags_devel $copts])

# standard files - fPIC compilation
#  no discovery on these files, because they would then depend on *.pic.o files within fab which
#  do not exist ; instead those link-time references are satisfied by the fab executable
#
+[@std.c]($dext = [ final.pic.o ]; $gendir = $dfab; $rfabdirs = [ $dfab/fablw ~ j ]; $cc; $cflags = [ $cflags_final $copts -fPIC ])
+[@std.c]($dext = [ debug.pic.o ]; $gendir = $dfab; $rfabdirs = [ $dfab/fablw ~ j ]; $cc; $cflags = [ $cflags_debug $copts -fPIC ])
+[@std.c]($dext = [ devel.pic.o ]; $gendir = $dfab; $rfabdirs = [ $dfab/fablw ~ j ]; $cc; $cflags = [ $cflags_devel $copts -fPIC ])

# generated files
+[@std.flex.states] ($dext = [ final.o ]; $gendir = $dfab; $rdirs = $dfab; $cc; $cflags = [ $cflags_final $copts ])
+[@std.flex.states] ($dext = [ debug.o ]; $gendir = $dfab; $rdirs = $dfab; $cc; $cflags = [ $cflags_debug $copts ])
+[@std.flex.states] ($dext = [ devel.o ]; $gendir = $dfab; $rdirs = $dfab; $cc; $cflags = [ $cflags_devel $copts ])
+[@std.bison.tokens]($dext = [ final.o ]; $gendir = $dfab; $rdirs = $dfab; $cc; $cflags = [ $cflags_final $copts ])
+[@std.bison.tokens]($dext = [ debug.o ]; $gendir = $dfab; $rdirs = $dfab; $cc; $cflags = [ $cflags_debug $copts ])
+[@std.bison.tokens]($dext = [ devel.o ]; $gendir = $dfab; $rdirs = $dfab; $cc; $cflags = [ $cflags_devel $copts ])
+[@std.xapi.errtab] ($dext = [ final.o ]; $gendir = $dfab; $rdirs = $dfab; $cc; $cflags = [ $cflags_final $copts ])
+[@std.xapi.errtab] ($dext = [ debug.o ]; $gendir = $dfab; $rdirs = $dfab; $cc; $cflags = [ $cflags_debug $copts ])
+[@std.xapi.errtab] ($dext = [ devel.o ]; $gendir = $dfab; $rdirs = $dfab; $cc; $cflags = [ $cflags_devel $copts ])

# operator so's
$faboplist_final = [ $dfab/fablw/op ~ j lsr sx/c/final.so y ]
$faboplist_debug = [ $dfab/fablw/op ~ j lsr sx/c/debug.so y ]
$faboplist_devel = [ $dfab/fablw/op ~ j lsr sx/c/devel.so y ]

#
# catchall node
#
[ @all ] : [ $fab @oplist ]

# target for building all operators
[ @oplist ] : [ $faboplist ]

#
# executables
#  -export-dynamic enables dloaded code (in particular, the fab-specific operator so's) to bind to symbols in the executable.
#
[ $fab_final ] :^ [ $libxapi_final $libxlinux_final $libpstring_final $liblistwise_final ]
[ $fab_debug ] :^ [ $libxapi_debug $libxlinux_debug $libpstring_debug $liblistwise_debug ]
[ $fab_devel ] :^ [ $libxapi_devel $libxlinux_devel $libpstring_devel $liblistwise_devel ]

[ $fab_final ] : [ $dfab/main.o ~ j ] 
{
	[ $cc ] [ $cflags_final -export-dynamic ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_final $lopts ~ fi ]
}

[ $fab_debug ] : [ $dfab/main.o ~ j ] 
{
	[ $cc ] [ $cflags_debug -export-dynamic ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_debug $lopts ~ fi ]
}

[ $fab_devel ] : [ $dfab/main.o ~ j ] 
{
	[ $cc ] [ $cflags_devel -export-dynamic ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw rx lx/o uu fi ] [ $lflags_devel $lopts ~ fi ]
}

#
# fab-specific operator so's - only link the immediate object. This so depends on fab for many symbols
#
[ $faboplist ~ dj shift ] :: [ $< ~ rx sx/pic.o ]
{
	  [ $cc ] [ $cflags ~ uu fi ] -o [ $@ ]	[ $@ ~ rx/ineed fi ] [
	] -shared [ "-Wl,-soname," [ $@ ~ rx bn ] ]
}

# also a bridge dependency on the fab executable
#[ $dfab/fablw/op ~ j lsr sx/c/pic.o y ] ::^ [ $fab ]
[ $faboplist ] ::^ [ $fab ]

#
# tasks
#

[ @install ] : [ @all ]
{
	chown fabsys:fabsys		[ $fab ]
	chmod ug+s 						[ $fab ]
	install -d																			[ $destdir/$bindir ]
	install [ $fab ]																[ $destdir/$bindir ]
	install [ $dfab/gcc-dep ]												[ $destdir/$bindir ]
	install -d 																			[ $destdir/$fabcachedir ]
	chown fabsys:fabsys															[ $destdir/$fabcachedir ]
	install -d 																			[ $destdir/$fabtmpdir ]
	chown fabsys:fabsys															[ $destdir/$fabtmpdir ]
	install -d 																			[ $destdir/$fabipcdir ]
	chown fabsys:fabsys															[ $destdir/$fabipcdir ]
	install -d																			[ $destdir/$fabinvokedir/std ]
	install -d																			[ $destdir/$fabinvokedir/std/c ]
	install -d																			[ $destdir/$fabinvokedir/std/l ]
	install -d																			[ $destdir/$fabinvokedir/std/y ]
	install -d																			[ $destdir/$fabinvokedir/std/flex ]
	install -d																			[ $destdir/$fabinvokedir/std/bison ]
	install [ $dfab/fablib/std/c.fab ]							[ $destdir/$fabinvokedir/std/c.fab ]
	install [ $dfab/fablib/std/l.fab ]							[ $destdir/$fabinvokedir/std/l.fab ]
	install [ $dfab/fablib/std/y.fab ]							[ $destdir/$fabinvokedir/std/y.fab ]
	install [ $dfab/fablib/std/flex/states.fab ]		[ $destdir/$fabinvokedir/std/flex/states.fab ]
	install [ $dfab/fablib/std/bison/tokens.fab ]		[ $destdir/$fabinvokedir/std/bison/tokens.fab ]

	rm -rf 																					[ $destdir/$fablwopdir ] 2>/dev/null
	install -d																			[ $destdir/$fablwopdir ]
	install [ $dfab/fablw/op/fi/fi.so ]							[ $destdir/$fablwopdir ]
	install [ $dfab/fablw/op/fg/fg.so ]							[ $destdir/$fablwopdir ]
}

[ @installman ] : [ @installman1 ]
[ @installman1 ] : [ $dfab/man/fab.1 ~ j ]
{
	install -d 																			[ $destdir/$mandir/man1 ]

	cat [ $dfab/man/fab.1 ] \
		| [ $^lw ] "s/---BUILDVERS---/<[ $VERSIONS ]>" \
		| [ $^lw ] "s/---BUILDDATE---/<[ @^.time ~ datef/%Y-%m-%d ]>" \
		| gzip -9c  															> [ $destdir/$mandir/man1/fab.1.gz ]
}
