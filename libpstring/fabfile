# source directories
$dcommon			= [ $*/../common ~ j ]
+[ $dcommon/vars.fab ]

# source invocations
+[ $dcommon ] @common

# variables
$libname 			= [ libpstring.so ]
$soname				= [ $libname ~ j ]
$libpstring		= [ $dlibpstring/libpstring.so ~ j ]		# path to the library .so
$cflags				= [ $cflags -fPIC [ $dlibpstring ~ lsr/c/-d/s/^/-I ] ]
$lflags				= [ $libxapi, $libxlinux, -shared, [ "-Wl,-soname," $soname ] ]

# source files
+[@std.c]($gendir = $dlibpstring; $rdirs = $dlibpstring; $ext = [ pic.o ]; -$cobjpaths; $cc $cflags)

##
## dependencies
##

# default NOFILE target - build library and all operators
[ @all ] : [ $libpstring ]

##
## formulas
##

# link the library
[ $libpstring ] : [ $cobjpaths ]
{
	  (echo "{ global: "
	> sed 's/.*API\(DATA\)\?[[:space:]]\+\([a-zA-Z][0-9a-zA-Z_]*\).*/\2;/p; d' <(\
	  cat -- [ $@ ~ rx/aneedw/xm/<c>/ss/u/fi ] )
	> echo "local: *; };"
	  ) 1>[ $dlibpstring/exports ]

	[ $cc ] [ $cflags ~ ss/u/fi ] -o [ $@ ] [ $@ ~ rx/aneedw/xm/<o>/ss/u/fi ] [ $lflags ] [ "-Wl,--version-script=" $dlibpstring/exports]
}

##
## tasks
##

[ @install ] : [ @all ]
{
	install -d																					[ $destdir/$libdir ]
	install [ $libpstring ]															[ $destdir/$libdir/$libname ]
	install [ $dlibpstring/pstring.h	]										[ $destdir/$incdir/pstring.h ]
}
