# definitions
+[ $*/../vars.fab ]

# source invocations
+[ $dcommon ]() @common

# variables
$libname 			= [ libpstring.so ]
$soname				= [ $libname ~ j ]
$copts				= [ -fPIC [ $dlibpstring ~ lsr c -d s/^/-I ]
	# include paths - mark as system to preclude dependency discovery from gcc
	[ $dlibxapi $dlibxlinux ~ s/^/-I ]
]
$cflags_final = [ $cflags_final $copts ]
$cflags_debug = [ $cflags_debug $copts ]
$cflags_devel = [ $cflags_devel $copts ]

$lopts				= [ -shared [ -Wl,--version-script=$*/exports ~ j ] ]
$lflags_final	= [ $libxapi_final $lopts $libxlinux_final [ -Wl,-soname,libpstring.so ~ j ] ]
$lflags_debug	= [ $libxapi_debug $lopts $libxlinux_debug [ -Wl,-soname,libpstring.so ~ j ] ]
$lflags_devel	= [ $libxapi_devel $lopts $libxlinux_devel [ -Wl,-soname,libpstring.devel.so ~ j ] ]

# source files
+[@std.c]($dext = [ final.pic.o ]; $rdirs = $dlibpstring; $cc; $cflags = $cflags_final)
+[@std.c]($dext = [ debug.pic.o ]; $rdirs = $dlibpstring; $cc; $cflags = $cflags_debug)
+[@std.c]($dext = [ devel.pic.o ]; $rdirs = $dlibpstring; $cc; $cflags = $cflags_devel)

##
## dependencies
##

# default NOFILE target - build library and all operators
[ @final ] : [ $libpstring_final ]
[ @debug ] : [ $libpstring_debug ]
[ @devel ] : [ $libpstring_devel ]

##
## formulas
##

# library exports
[ $*/exports ~ j ] : [ $* ~ lsr lx/c ]
{
	  (echo "{ global: "
	> sed 's/.*API\(DATA\)\?[[:space:]]\+\([a-zA-Z][0-9a-zA-Z_]*\).*/\2;/p; d' <(\
	  cat -- [ $@ ~ rx/ineed fi ] )
	> echo "local: *; };"
	  ) 1>[ $@ ]
}

# link the library
[ $libpstring_final ] : [ [ $*/exports ~ j ] [ $*/pstring/pstring.final.pic.o ~ j ] ]
{
	[ $cc ] [ $cflags_final ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_final ~ fi ]
}

[ $libpstring_debug ] : [ [ $*/exports ~ j ] [ $*/pstring/pstring.debug.pic.o ~ j ] ]
{
	[ $cc ] [ $cflags_debug ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_debug ~ fi ]
}

[ $libpstring_devel ] : [ [ $*/exports ~ j ] [ $*/pstring/pstring.devel.pic.o ~ j ] ]
{
	[ $cc ] [ $cflags_devel ~ uu fi ] -o [ $@ ] [ $@ ~ rx/aneedw lx/o ss u fi ] [ $lflags_devel ~ fi ]
}

[ $libpstring_final ] :^ [ $libxapi_final $libxlinux_final ]
[ $libpstring_debug ] :^ [ $libxapi_debug $libxlinux_debug ]
[ $libpstring_devel ] :^ [ $libxapi_devel $libxlinux_devel ]

##
## tasks
##

[ @install.final ] : [ @final ]
{
	install -d																					[ $destdir/$libdir ]
	install [ $libpstring_final ]												[ $destdir/$libdir/$libname ]
}

[ @install.debug ] : [ @debug ]
{
	install -d																					[ $destdir/$libdir ]
	install [ $libpstring_debug ]												[ $destdir/$libdir/$libname ]
}

[ @installdevheaders ]
{
	install -d																					[ $destdir/$incdir ]
	install [ $dlibpstring/pstring.h	]									[ $destdir/$incdir/pstring.h ]
}
